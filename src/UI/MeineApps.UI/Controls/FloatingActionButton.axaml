<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- FLOATING ACTION BUTTON (FAB) STYLES                                     -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <!-- Base FAB -->
  <Style Selector="Button.FAB">
    <Setter Property="Width" Value="56" />
    <Setter Property="Height" Value="56" />
    <Setter Property="CornerRadius" Value="28" />
    <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource PrimaryContrastBrush}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="16" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="Transitions">
      <Transitions>
        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" />
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.FAB:pointerover">
    <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
    <Setter Property="RenderTransform" Value="scale(1.05)" />
  </Style>

  <Style Selector="Button.FAB:pressed">
    <Setter Property="Background" Value="{DynamicResource PrimaryPressedBrush}" />
    <Setter Property="RenderTransform" Value="scale(0.95)" />
  </Style>

  <!-- Mini FAB -->
  <Style Selector="Button.FAB.Mini">
    <Setter Property="Width" Value="40" />
    <Setter Property="Height" Value="40" />
    <Setter Property="CornerRadius" Value="20" />
    <Setter Property="Padding" Value="8" />
  </Style>

  <!-- Extended FAB (with text) -->
  <Style Selector="Button.FAB.Extended">
    <Setter Property="Width" Value="NaN" />
    <Setter Property="Height" Value="48" />
    <Setter Property="CornerRadius" Value="24" />
    <Setter Property="Padding" Value="16,0" />
  </Style>

  <!-- Secondary FAB -->
  <Style Selector="Button.FAB.Secondary">
    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}" />
  </Style>

  <Style Selector="Button.FAB.Secondary:pointerover">
    <Setter Property="Background" Value="{DynamicResource SecondaryHoverBrush}" />
  </Style>

  <Style Selector="Button.FAB.Secondary:pressed">
    <Setter Property="Background" Value="{DynamicResource SecondaryPressedBrush}" />
  </Style>

  <!-- Surface FAB (lighter) -->
  <Style Selector="Button.FAB.Surface">
    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
  </Style>

  <Style Selector="Button.FAB.Surface:pointerover">
    <Setter Property="Background" Value="{DynamicResource CardHoverBrush}" />
  </Style>

</Styles>
