<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- BASE DESIGN TOKENS - Shared across all themes                          -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <Style>
    <Style.Resources>
      <!-- Spacing System (8px grid) -->
      <x:Double x:Key="SpacingXs">4</x:Double>
      <x:Double x:Key="SpacingSm">8</x:Double>
      <x:Double x:Key="SpacingMd">12</x:Double>
      <x:Double x:Key="SpacingLg">16</x:Double>
      <x:Double x:Key="SpacingXl">24</x:Double>
      <x:Double x:Key="Spacing2Xl">32</x:Double>
      <x:Double x:Key="Spacing3Xl">48</x:Double>

      <!-- Corner Radius System -->
      <CornerRadius x:Key="RadiusSm">4</CornerRadius>
      <CornerRadius x:Key="RadiusMd">8</CornerRadius>
      <CornerRadius x:Key="RadiusLg">12</CornerRadius>
      <CornerRadius x:Key="RadiusXl">16</CornerRadius>
      <CornerRadius x:Key="RadiusFull">9999</CornerRadius>

      <!-- Button Heights -->
      <x:Double x:Key="ButtonHeightSm">32</x:Double>
      <x:Double x:Key="ButtonHeightMd">40</x:Double>
      <x:Double x:Key="ButtonHeightLg">48</x:Double>

      <!-- Input Height -->
      <x:Double x:Key="InputHeight">48</x:Double>

      <!-- Touch Targets (Accessibility) -->
      <x:Double x:Key="MinTouchTarget">48</x:Double>

      <!-- Icon Sizes -->
      <x:Double x:Key="IconSizeXs">16</x:Double>
      <x:Double x:Key="IconSizeSm">20</x:Double>
      <x:Double x:Key="IconSizeMd">24</x:Double>
      <x:Double x:Key="IconSizeLg">32</x:Double>
      <x:Double x:Key="IconSizeXl">48</x:Double>

      <!-- Font Sizes -->
      <x:Double x:Key="FontSizeCaption">11</x:Double>
      <x:Double x:Key="FontSizeLabelMd">12</x:Double>
      <x:Double x:Key="FontSizeLabelLg">14</x:Double>
      <x:Double x:Key="FontSizeBodyMd">14</x:Double>
      <x:Double x:Key="FontSizeBodyLg">16</x:Double>
      <x:Double x:Key="FontSizeTitleMd">16</x:Double>
      <x:Double x:Key="FontSizeTitleLg">22</x:Double>
      <x:Double x:Key="FontSizeHeadlineMd">28</x:Double>
      <x:Double x:Key="FontSizeHeadlineLg">32</x:Double>
      <x:Double x:Key="FontSizeDisplayMd">36</x:Double>
      <x:Double x:Key="FontSizeDisplayLg">48</x:Double>

      <!-- Card Defaults -->
      <Thickness x:Key="CardPadding">16</Thickness>
      <CornerRadius x:Key="CardRadius">12</CornerRadius>
    </Style.Resources>
  </Style>

</Styles>
