<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BomberBlast.ViewModels"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="BomberBlast.Views.HelpView"
             x:DataType="vm:HelpViewModel">

  <!-- Gradient Background -->
  <Panel>
    <Border>
      <Border.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
          <GradientStop Color="{DynamicResource GradientStartColor}" Offset="0" />
          <GradientStop Color="{DynamicResource GradientMidColor}" Offset="0.5" />
          <GradientStop Color="{DynamicResource GradientEndColor}" Offset="1" />
        </LinearGradientBrush>
      </Border.Background>
    </Border>

    <Grid RowDefinitions="Auto,*">

      <!-- Header -->
      <Border Grid.Row="0"
              Classes="CardElevated"
              Padding="16,12"
              CornerRadius="0,0,12,12">
        <Grid ColumnDefinitions="Auto,*,Auto">
          <!-- Back Button -->
          <Button Classes="Text"
                  Command="{Binding GoBackCommand}">
            <mi:MaterialIcon Kind="ArrowLeft" Width="24" Height="24" />
          </Button>

          <!-- Title -->
          <StackPanel Grid.Column="1"
                      Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      Spacing="8">
            <mi:MaterialIcon Kind="HelpCircleOutline" Width="24" Height="24"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
            <TextBlock Text="{loc:Translate Help}"
                       FontSize="20" FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
          </StackPanel>

          <!-- Spacer -->
          <Border Grid.Column="2" Width="44" />
        </Grid>
      </Border>

      <!-- Content -->
      <ScrollViewer Grid.Row="1"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" Margin="12,12,12,80">

          <!-- How to Play + Controls: Side by Side -->
          <Grid ColumnDefinitions="*,*">

            <!-- How to Play -->
            <Border Grid.Column="0" Classes="Card StatsCard" Margin="0,0,6,0">
              <StackPanel Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <mi:MaterialIcon Kind="GamepadVariantOutline" Width="20" Height="20"
                                   Foreground="{DynamicResource PrimaryBrush}" />
                  <TextBlock Text="{loc:Translate HowToPlay}"
                             FontSize="16" FontWeight="Bold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </StackPanel>
                <TextBlock Text="{loc:Translate HowToPlayDesc}"
                           FontSize="13" TextWrapping="Wrap"
                           Foreground="{DynamicResource TextSecondaryBrush}" />
              </StackPanel>
            </Border>

            <!-- Controls -->
            <Border Grid.Column="1" Classes="Card StatsCard" Margin="6,0,0,0">
              <StackPanel Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <mi:MaterialIcon Kind="Gamepad" Width="20" Height="20"
                                   Foreground="{DynamicResource PrimaryBrush}" />
                  <TextBlock Text="{loc:Translate ControlsHelp}"
                             FontSize="16" FontWeight="Bold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </StackPanel>
                <TextBlock Text="{loc:Translate ControlsHelpDesc}"
                           FontSize="13" TextWrapping="Wrap"
                           Foreground="{DynamicResource TextSecondaryBrush}" />
              </StackPanel>
            </Border>

          </Grid>

          <!-- Power-Ups -->
          <Border Classes="Card StatsCard">
            <StackPanel Spacing="8">
              <StackPanel Orientation="Horizontal" Spacing="8">
                <mi:MaterialIcon Kind="StarCircleOutline" Width="20" Height="20"
                                 Foreground="Gold" />
                <TextBlock Text="{loc:Translate PowerUps}"
                           FontSize="16" FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />
              </StackPanel>

              <WrapPanel Orientation="Horizontal">
                <!-- Bomb Up -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuBombUp" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_BombUp}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_BombUp_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Fire -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuFire" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_Fire}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Fire_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Speed -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuSpeed" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_Speed}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Speed_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Wall Pass -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuWallpass" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_Wallpass}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Wallpass_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Detonator -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuDetonator" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_Detonator}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Detonator_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Bomb Pass -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuBombpass" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_Bombpass}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Bombpass_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Flame Pass -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuFlamepass" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_Flamepass}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Flamepass_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Mystery -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuMystery" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_Mystery}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Mystery_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Kick -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuKick" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_Kick}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Kick_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Line Bomb -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuLineBomb" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_LineBomb}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_LineBomb_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Power Bomb -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuPowerBomb" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_PowerBomb}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_PowerBomb_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Skull -->
                <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="140">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuSkull" Width="32" Height="32" />
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                      <TextBlock Text="{loc:Translate PowerUp_Skull}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource ErrorBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Skull_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
              </WrapPanel>
            </StackPanel>
          </Border>

          <!-- Enemies + Tips: Side by Side -->
          <Grid ColumnDefinitions="*,Auto">

            <!-- Enemies -->
            <Border Grid.Column="0" Classes="Card StatsCard" Margin="0,0,6,0">
              <StackPanel Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <mi:MaterialIcon Kind="Ghost" Width="20" Height="20"
                                   Foreground="{DynamicResource ErrorBrush}" />
                  <TextBlock Text="{loc:Translate Enemies}"
                             FontSize="16" FontWeight="Bold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </StackPanel>

                <WrapPanel Orientation="Horizontal">
                  <!-- Ballom -->
                  <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="150">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <skia:SKCanvasView x:Name="EnBallom" Width="32" Height="32" />
                      <StackPanel Spacing="2" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Translate Enemy_Ballom}"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource WarningBrush}" />
                        <TextBlock Text="{loc:Translate Enemy_Ballom_Desc}"
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextMutedBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>
                  <!-- Onil -->
                  <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="150">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <skia:SKCanvasView x:Name="EnOnil" Width="32" Height="32" />
                      <StackPanel Spacing="2" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Translate Enemy_Onil}"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource WarningBrush}" />
                        <TextBlock Text="{loc:Translate Enemy_Onil_Desc}"
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextMutedBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>
                  <!-- Doll -->
                  <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="150">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <skia:SKCanvasView x:Name="EnDoll" Width="32" Height="32" />
                      <StackPanel Spacing="2" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Translate Enemy_Doll}"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource WarningBrush}" />
                        <TextBlock Text="{loc:Translate Enemy_Doll_Desc}"
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextMutedBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>
                  <!-- Minvo -->
                  <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="150">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <skia:SKCanvasView x:Name="EnMinvo" Width="32" Height="32" />
                      <StackPanel Spacing="2" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Translate Enemy_Minvo}"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ErrorBrush}" />
                        <TextBlock Text="{loc:Translate Enemy_Minvo_Desc}"
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextMutedBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>
                  <!-- Kondoria -->
                  <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="150">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <skia:SKCanvasView x:Name="EnKondoria" Width="32" Height="32" />
                      <StackPanel Spacing="2" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Translate Enemy_Kondoria}"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ErrorBrush}" />
                        <TextBlock Text="{loc:Translate Enemy_Kondoria_Desc}"
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextMutedBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>
                  <!-- Ovapi -->
                  <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="150">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <skia:SKCanvasView x:Name="EnOvapi" Width="32" Height="32" />
                      <StackPanel Spacing="2" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Translate Enemy_Ovapi}"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ErrorBrush}" />
                        <TextBlock Text="{loc:Translate Enemy_Ovapi_Desc}"
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextMutedBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>
                  <!-- Pass -->
                  <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="150">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <skia:SKCanvasView x:Name="EnPass" Width="32" Height="32" />
                      <StackPanel Spacing="2" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Translate Enemy_Pass}"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ErrorBrush}" />
                        <TextBlock Text="{loc:Translate Enemy_Pass_Desc}"
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextMutedBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>
                  <!-- Pontan -->
                  <Border Classes="CardElevated" Padding="8" Margin="0,0,8,8" CornerRadius="8" MinWidth="150">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <skia:SKCanvasView x:Name="EnPontan" Width="32" Height="32" />
                      <StackPanel Spacing="2" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Translate Enemy_Pontan}"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ErrorBrush}" />
                        <TextBlock Text="{loc:Translate Enemy_Pontan_Desc}"
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextMutedBrush}" />
                      </StackPanel>
                    </StackPanel>
                  </Border>
                </WrapPanel>
              </StackPanel>
            </Border>

            <!-- Tips -->
            <Border Grid.Column="1" Classes="Card StatsCard" Margin="6,0,0,0" Width="280">
              <StackPanel Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <mi:MaterialIcon Kind="LightbulbOnOutline" Width="20" Height="20"
                                   Foreground="{DynamicResource WarningBrush}" />
                  <TextBlock Text="{loc:Translate Tips}"
                             FontSize="16" FontWeight="Bold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </StackPanel>
                <TextBlock Text="{loc:Translate TipsDesc}"
                           FontSize="13" TextWrapping="Wrap"
                           LineHeight="20"
                           Foreground="{DynamicResource TextSecondaryBrush}" />
              </StackPanel>
            </Border>

          </Grid>

          <!-- Tutorial wiederholen -->
          <Button Classes="Primary GameButton"
                  Command="{Binding ReplayTutorialCommand}"
                  HorizontalAlignment="Center"
                  Margin="0,8,0,0"
                  Padding="24,12">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <mi:MaterialIcon Kind="SchoolOutline" Width="20" Height="20" />
              <TextBlock Text="{loc:Translate ReplayTutorial}" FontSize="15" FontWeight="SemiBold" />
            </StackPanel>
          </Button>

          <!-- Bottom Spacer (80dp fÃ¼r Ad-Banner + Navigation-Bar) -->
          <Border Height="80" />

        </StackPanel>
      </ScrollViewer>

    </Grid>
  </Panel>

</UserControl>
