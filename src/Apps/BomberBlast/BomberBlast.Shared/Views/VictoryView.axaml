<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BomberBlast.ViewModels"
             xmlns:mi="using:Material.Icons.Avalonia"
             x:Class="BomberBlast.Views.VictoryView"
             x:DataType="vm:VictoryViewModel">

  <!-- Gradient Background -->
  <Panel>
    <Border>
      <Border.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
          <GradientStop Color="#1A0A2E" Offset="0" />
          <GradientStop Color="#2D1B4E" Offset="0.5" />
          <GradientStop Color="#1A0A2E" Offset="1" />
        </LinearGradientBrush>
      </Border.Background>
    </Border>

    <!-- Goldener Akzent-Schimmer -->
    <Border Opacity="0.15">
      <Border.Background>
        <RadialGradientBrush Center="50%,40%" RadiusX="60%" RadiusY="60%">
          <GradientStop Color="#FFD700" Offset="0" />
          <GradientStop Color="Transparent" Offset="1" />
        </RadialGradientBrush>
      </Border.Background>
    </Border>

    <!-- 2-Column Layout (Landscape) -->
    <Grid ColumnDefinitions="*,*"
          VerticalAlignment="Center"
          Margin="32,16">

      <!-- Links: Trophy + Titel -->
      <StackPanel Grid.Column="0"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Spacing="12">

        <!-- Grosse Krone -->
        <mi:MaterialIcon Kind="Crown" Width="72" Height="72"
                         Foreground="#FFD700"
                         HorizontalAlignment="Center" />

        <!-- Titel -->
        <TextBlock Text="{Binding TitleText}"
                   FontSize="42" FontWeight="ExtraBold"
                   Foreground="#FFD700"
                   HorizontalAlignment="Center" />

        <!-- Untertitel -->
        <TextBlock Text="{Binding SubtitleText}"
                   FontSize="18"
                   Foreground="#E0E0E0"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   TextAlignment="Center" />

        <!-- Sterne-Anzeige -->
        <Border Background="#2A1A4A"
                CornerRadius="12"
                Padding="20,12"
                HorizontalAlignment="Center"
                BoxShadow="0 4 12 0 #40000000">
          <StackPanel Spacing="8" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="8"
                        HorizontalAlignment="Center">
              <mi:MaterialIcon Kind="Star" Width="28" Height="28"
                               Foreground="#FFD700" />
              <TextBlock Text="{Binding StarsText}"
                         FontSize="22" FontWeight="Bold"
                         Foreground="#FFD700"
                         VerticalAlignment="Center" />
            </StackPanel>
          </StackPanel>
        </Border>

      </StackPanel>

      <!-- Rechts: Danke + Buttons -->
      <StackPanel Grid.Column="1"
                  VerticalAlignment="Center"
                  Spacing="16"
                  Margin="16,0">

        <!-- Dankes-Text -->
        <TextBlock Text="{Binding ThanksText}"
                   FontSize="20"
                   Foreground="#C0C0F0"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   TextAlignment="Center" />

        <!-- Hauptmenue Button -->
        <Button Command="{Binding GoToMainMenuCommand}"
                Classes="Primary GameButton"
                Background="#FFD700"
                FontSize="20"
                Height="56"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="Home" Width="24" Height="24"
                             Foreground="#1A0A2E" />
            <TextBlock Text="Main Menu"
                       FontSize="20" FontWeight="Bold"
                       Foreground="#1A0A2E" />
          </StackPanel>
        </Button>

        <!-- Shop Button -->
        <Button Command="{Binding GoToShopCommand}"
                Classes="Secondary GameButton"
                FontSize="18"
                Height="48"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="Cart" Width="20" Height="20"
                             Foreground="White" />
            <TextBlock Text="Shop"
                       FontSize="18"
                       Foreground="White" />
          </StackPanel>
        </Button>

      </StackPanel>

    </Grid>
  </Panel>

</UserControl>
