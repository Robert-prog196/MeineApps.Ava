<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FinanzRechner.ViewModels.Calculators"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="FinanzRechner.Views.Calculators.SavingsPlanView"
             x:DataType="vm:SavingsPlanViewModel"
             AutomationProperties.AutomationId="SavingsPlan_Root">

    <Grid RowDefinitions="Auto,*,Auto"
          AutomationProperties.AutomationId="SavingsPlan_Grid_Root">

        <!-- ═══════ Header Banner ═══════ -->
        <Border Grid.Row="0"
                AutomationProperties.AutomationId="SavingsPlan_BannerHeader"
                Background="{DynamicResource InfoBrush}"
                Padding="16,12,16,20"
                CornerRadius="0,0,24,24">
          <Grid ColumnDefinitions="Auto,*"
                AutomationProperties.AutomationId="SavingsPlan_Grid_Header">
            <Button Command="{Binding GoBackCommand}"
                    AutomationProperties.AutomationId="SavingsPlan_BtnBack"
                    Background="#33FFFFFF"
                    CornerRadius="20"
                    Width="40" Height="40"
                    Padding="0">
              <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White"
                               AutomationProperties.AutomationId="SavingsPlan_Icon_Back" />
            </Button>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                        AutomationProperties.AutomationId="SavingsPlan_Panel_HeaderTitle"
                        Margin="12,0,0,0" VerticalAlignment="Center">
              <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40"
                      AutomationProperties.AutomationId="SavingsPlan_Border_TitleIcon">
                <mi:MaterialIcon Kind="Safe" Width="22" Height="22"
                                 AutomationProperties.AutomationId="SavingsPlan_Icon_Title"
                                 Foreground="White"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <TextBlock Text="{Binding TitleText}"
                         AutomationProperties.AutomationId="SavingsPlan_TxtTitle"
                         FontSize="20" FontWeight="Bold" Foreground="White"
                         VerticalAlignment="Center" />
            </StackPanel>
          </Grid>
        </Border>

        <!-- ═══════ Content ═══════ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      AutomationProperties.AutomationId="SavingsPlan_ScrollContent">
            <StackPanel Spacing="16" Margin="16,16,16,0"
                        AutomationProperties.AutomationId="SavingsPlan_Panel_Content">

                <!-- Input Card -->
                <Border Classes="Card StatsCard"
                        AutomationProperties.AutomationId="SavingsPlan_CardInput">
                    <StackPanel Spacing="14"
                                AutomationProperties.AutomationId="SavingsPlan_Panel_InputFields">

                        <!-- Monthly Deposit -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="SavingsPlan_Panel_MonthlyDeposit">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="SavingsPlan_Panel_MonthlyDepositLabel">
                                <mi:MaterialIcon Kind="CalendarClock" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="SavingsPlan_Icon_MonthlyDeposit"
                                                 Foreground="{DynamicResource InfoBrush}" />
                                <TextBlock Text="{Binding MonthlyDepositText}"
                                           AutomationProperties.AutomationId="SavingsPlan_TxtMonthlyDepositLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding MonthlyDeposit}"
                                     AutomationProperties.AutomationId="SavingsPlan_InputMonthlyDeposit"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Initial Deposit -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="SavingsPlan_Panel_InitialDeposit">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="SavingsPlan_Panel_InitialDepositLabel">
                                <mi:MaterialIcon Kind="CashMultiple" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="SavingsPlan_Icon_InitialDeposit"
                                                 Foreground="{DynamicResource InfoBrush}" />
                                <TextBlock Text="{Binding InitialDepositText}"
                                           AutomationProperties.AutomationId="SavingsPlan_TxtInitialDepositLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding InitialDeposit}"
                                     AutomationProperties.AutomationId="SavingsPlan_InputInitialDeposit"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Annual Rate -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="SavingsPlan_Panel_AnnualRate">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="SavingsPlan_Panel_AnnualRateLabel">
                                <mi:MaterialIcon Kind="Percent" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="SavingsPlan_Icon_AnnualRate"
                                                 Foreground="{DynamicResource InfoBrush}" />
                                <TextBlock Text="{Binding AnnualRateText}"
                                           AutomationProperties.AutomationId="SavingsPlan_TxtAnnualRateLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding AnnualRate}"
                                     AutomationProperties.AutomationId="SavingsPlan_InputAnnualRate"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Years -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="SavingsPlan_Panel_Years">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="SavingsPlan_Panel_YearsLabel">
                                <mi:MaterialIcon Kind="CalendarRange" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="SavingsPlan_Icon_Years"
                                                 Foreground="{DynamicResource InfoBrush}" />
                                <TextBlock Text="{Binding YearsText}"
                                           AutomationProperties.AutomationId="SavingsPlan_TxtYearsLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding Years}"
                                     AutomationProperties.AutomationId="SavingsPlan_InputYears"
                                     Watermark="1"
                                     TextInputOptions.ContentType="Digits"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- Fehlermeldung bei Überlauf -->
                <Border Classes="Card"
                        AutomationProperties.AutomationId="SavingsPlan_CardError"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="8"
                                AutomationProperties.AutomationId="SavingsPlan_Panel_Error">
                        <mi:MaterialIcon Kind="AlertCircle" Width="20" Height="20"
                                         AutomationProperties.AutomationId="SavingsPlan_Icon_Error"
                                         Foreground="{DynamicResource ExpenseBrush}" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   AutomationProperties.AutomationId="SavingsPlan_TxtError"
                                   Foreground="{DynamicResource ExpenseBrush}"
                                   FontSize="14" TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Result Card -->
                <Border Classes="Card Elevated StatsCard"
                        AutomationProperties.AutomationId="SavingsPlan_CardResult"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="12"
                                AutomationProperties.AutomationId="SavingsPlan_Panel_Result">
                        <StackPanel Orientation="Horizontal" Spacing="8"
                                    AutomationProperties.AutomationId="SavingsPlan_Panel_ResultHeader">
                            <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                                             AutomationProperties.AutomationId="SavingsPlan_Icon_Result"
                                             Foreground="{DynamicResource InfoBrush}" />
                            <TextBlock Text="{Binding ResultText}"
                                       AutomationProperties.AutomationId="SavingsPlan_TxtResultHeader"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Primary Result Highlight -->
                        <Border Background="{DynamicResource InfoBrush}"
                                AutomationProperties.AutomationId="SavingsPlan_CardFinalAmount"
                                CornerRadius="12"
                                Padding="16,12">
                          <StackPanel AutomationProperties.AutomationId="SavingsPlan_Panel_FinalAmount">
                            <TextBlock Text="{Binding FinalAmountText}"
                                       AutomationProperties.AutomationId="SavingsPlan_TxtFinalAmountLabel"
                                       FontSize="12" Foreground="#CCFFFFFF" />
                            <TextBlock Text="{Binding FinalAmountDisplay}"
                                       AutomationProperties.AutomationId="SavingsPlan_TxtFinalAmount"
                                       FontSize="28" FontWeight="Bold" Foreground="White" />
                          </StackPanel>
                        </Border>

                        <!-- Secondary Results -->
                        <StackPanel Spacing="8" Margin="4,0"
                                    AutomationProperties.AutomationId="SavingsPlan_Panel_SecondaryResults">
                          <Grid ColumnDefinitions="*,Auto"
                                AutomationProperties.AutomationId="SavingsPlan_Grid_TotalDeposits">
                            <TextBlock Text="{Binding TotalDepositsText}"
                                       AutomationProperties.AutomationId="SavingsPlan_TxtTotalDepositsLabel"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding TotalDepositsDisplay}"
                                       AutomationProperties.AutomationId="SavingsPlan_TxtTotalDeposits"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                          </Grid>
                          <Border Height="1" Background="{DynamicResource BorderSubtleBrush}"
                                  AutomationProperties.AutomationId="SavingsPlan_Border_ResultDivider" />
                          <Grid ColumnDefinitions="*,Auto"
                                AutomationProperties.AutomationId="SavingsPlan_Grid_InterestEarned">
                            <TextBlock Text="{Binding InterestEarnedText}"
                                       AutomationProperties.AutomationId="SavingsPlan_TxtInterestEarnedLabel"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding InterestEarnedDisplay}"
                                       AutomationProperties.AutomationId="SavingsPlan_TxtInterestEarned"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource IncomeBrush}"/>
                          </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Chart Card -->
                <Border Classes="Card Elevated StatsCard"
                        AutomationProperties.AutomationId="SavingsPlan_CardChart"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="8"
                                AutomationProperties.AutomationId="SavingsPlan_Panel_Chart">
                        <StackPanel Orientation="Horizontal" Spacing="8"
                                    AutomationProperties.AutomationId="SavingsPlan_Panel_ChartHeader">
                            <mi:MaterialIcon Kind="ChartLine" Width="20" Height="20"
                                             AutomationProperties.AutomationId="SavingsPlan_Icon_Chart"
                                             Foreground="{DynamicResource InfoBrush}" />
                            <TextBlock Text="{Binding SavingsGrowthText}"
                                       AutomationProperties.AutomationId="SavingsPlan_TxtChartTitle"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <skia:SKCanvasView x:Name="StackedAreaCanvas"
                                            AutomationProperties.AutomationId="SavingsPlan_CanvasChart"
                                            PaintSurface="OnPaintStackedArea"
                                            Height="220" />

                        <!-- Legend -->
                        <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center"
                                    AutomationProperties.AutomationId="SavingsPlan_Panel_Legend">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="SavingsPlan_Panel_LegendDeposits">
                                <Border Background="#3B82F6" Width="12" Height="12" CornerRadius="6"
                                        AutomationProperties.AutomationId="SavingsPlan_Border_LegendDepositsColor"/>
                                <TextBlock Text="{Binding DepositsLegendText}" FontSize="12"
                                           AutomationProperties.AutomationId="SavingsPlan_TxtLegendDeposits"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="SavingsPlan_Panel_LegendInterest">
                                <Border Background="#22C55E" Width="12" Height="12" CornerRadius="6"
                                        AutomationProperties.AutomationId="SavingsPlan_Border_LegendInterestColor"/>
                                <TextBlock Text="{Binding InterestEarnedText}" FontSize="12"
                                           AutomationProperties.AutomationId="SavingsPlan_TxtLegendInterest"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Height="16"
                        AutomationProperties.AutomationId="SavingsPlan_Border_BottomSpacer" />

            </StackPanel>
        </ScrollViewer>

        <!-- ═══════ Action Buttons ═══════ -->
        <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}"
                AutomationProperties.AutomationId="SavingsPlan_SectionActions">
          <Grid ColumnDefinitions="*,12,*"
                AutomationProperties.AutomationId="SavingsPlan_Grid_Actions">
            <Button Command="{Binding ResetCommand}" Classes="Outlined"
                    AutomationProperties.AutomationId="SavingsPlan_BtnReset"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8"
                          AutomationProperties.AutomationId="SavingsPlan_Panel_ResetContent">
                <mi:MaterialIcon Kind="Refresh" Width="20" Height="20"
                                 AutomationProperties.AutomationId="SavingsPlan_Icon_Reset" />
                <TextBlock Text="{Binding ResetText}" VerticalAlignment="Center"
                           AutomationProperties.AutomationId="SavingsPlan_Txt_Reset" />
              </StackPanel>
            </Button>
            <Button Grid.Column="2" Command="{Binding CalculateCommand}" Classes="Primary"
                    AutomationProperties.AutomationId="SavingsPlan_BtnCalculate"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8"
                          AutomationProperties.AutomationId="SavingsPlan_Panel_CalculateContent">
                <mi:MaterialIcon Kind="Calculator" Width="20" Height="20"
                                 AutomationProperties.AutomationId="SavingsPlan_Icon_Calculate" />
                <TextBlock Text="{Binding CalculateText}" VerticalAlignment="Center"
                           AutomationProperties.AutomationId="SavingsPlan_Txt_Calculate" />
              </StackPanel>
            </Button>
          </Grid>
        </Border>

    </Grid>

</UserControl>
