<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FinanzRechner.ViewModels.Calculators"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             x:Class="FinanzRechner.Views.Calculators.InflationView"
             x:DataType="vm:InflationViewModel">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header Banner (Orange fuer Inflation) -->
        <Border Grid.Row="0"
                Padding="16,12,16,20"
                CornerRadius="0,0,24,24">
          <Border.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#F97316" Offset="0" />
              <GradientStop Color="#EA580C" Offset="1" />
            </LinearGradientBrush>
          </Border.Background>
          <Grid ColumnDefinitions="Auto,*">
            <Button Command="{Binding GoBackCommand}"
                    Background="#33FFFFFF"
                    CornerRadius="20"
                    Width="40" Height="40"
                    Padding="0">
              <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
            </Button>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                        Margin="12,0,0,0" VerticalAlignment="Center">
              <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
                <mi:MaterialIcon Kind="CurrencyUsd" Width="22" Height="22"
                                 Foreground="White"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <TextBlock Text="{Binding TitleText}"
                         FontSize="20" FontWeight="Bold" Foreground="White"
                         VerticalAlignment="Center" />
            </StackPanel>
          </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16" Margin="16,16,16,0">

                <!-- Input Card -->
                <Border Classes="Card">
                    <StackPanel Spacing="14">

                        <!-- Aktueller Betrag -->
                        <StackPanel Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="CashMultiple" Width="16" Height="16"
                                                 Foreground="#F97316" />
                                <TextBlock Text="{Binding CurrentAmountText}"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding CurrentAmount}"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Inflationsrate -->
                        <StackPanel Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="Percent" Width="16" Height="16"
                                                 Foreground="#F97316" />
                                <TextBlock Text="{Binding AnnualInflationRateText}"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding AnnualInflationRate}"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Jahre -->
                        <StackPanel Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="CalendarRange" Width="16" Height="16"
                                                 Foreground="#F97316" />
                                <TextBlock Text="{Binding YearsText}"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding Years}"
                                     Watermark="1"
                                     TextInputOptions.ContentType="Digits"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- Fehlermeldung bei Ãœberlauf -->
                <Border Classes="Card"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <mi:MaterialIcon Kind="AlertCircle" Width="20" Height="20"
                                         Foreground="{DynamicResource ExpenseBrush}" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="{DynamicResource ExpenseBrush}"
                                   FontSize="14" TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Result Card -->
                <Border Classes="Card Elevated"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                                             Foreground="#F97316" />
                            <TextBlock Text="{Binding ResultText}"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Primaeres Ergebnis: Kaufkraft -->
                        <Border CornerRadius="12"
                                Padding="16,12">
                          <Border.Background>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                              <GradientStop Color="#F97316" Offset="0" />
                              <GradientStop Color="#EA580C" Offset="1" />
                            </LinearGradientBrush>
                          </Border.Background>
                          <StackPanel>
                            <TextBlock Text="{Binding PurchasingPowerText}"
                                       FontSize="12" Foreground="#CCFFFFFF" />
                            <TextBlock Text="{Binding PurchasingPowerDisplay}"
                                       FontSize="28" FontWeight="Bold" Foreground="White" />
                          </StackPanel>
                        </Border>

                        <!-- Sekundaere Ergebnisse -->
                        <Grid ColumnDefinitions="*,Auto" Margin="4,0">
                            <TextBlock Text="{Binding PurchasingPowerLossText}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding PurchasingPowerLossDisplay}"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="#EF4444"/>
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto" Margin="4,0">
                            <TextBlock Text="{Binding FutureValueText}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding FutureValueDisplay}"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto" Margin="4,0">
                            <TextBlock Text="{Binding LossPercentText}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding LossPercentDisplay}"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="#EF4444"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Chart Card -->
                <Border Classes="Card Elevated"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <mi:MaterialIcon Kind="ChartLine" Width="20" Height="20"
                                             Foreground="#F97316" />
                            <TextBlock Text="{Binding PurchasingPowerLossChartText}"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <lvc:CartesianChart Series="{Binding ChartSeries}"
                                            XAxes="{Binding XAxes}"
                                            YAxes="{Binding YAxes}"
                                            Height="220"
                                            Background="{DynamicResource CardBrush}"
                                            ZoomMode="None"
                                            TooltipPosition="Top"/>

                        <!-- Legende -->
                        <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Border Background="#22C55E" Width="12" Height="12" CornerRadius="6"/>
                                <TextBlock Text="{Binding PurchasingPowerText}" FontSize="12"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Border Background="#EF4444" Width="12" Height="12" CornerRadius="6"/>
                                <TextBlock Text="{Binding PurchasingPowerLossText}" FontSize="12"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Height="16" />

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}">
          <Grid ColumnDefinitions="*,12,*">
            <Button Command="{Binding ResetCommand}" Classes="Outlined"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8">
                <mi:MaterialIcon Kind="Refresh" Width="20" Height="20" />
                <TextBlock Text="{Binding ResetText}" VerticalAlignment="Center" />
              </StackPanel>
            </Button>
            <Button Grid.Column="2" Command="{Binding CalculateCommand}" Classes="Primary"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8">
                <mi:MaterialIcon Kind="Calculator" Width="20" Height="20" />
                <TextBlock Text="{Binding CalculateText}" VerticalAlignment="Center" />
              </StackPanel>
            </Button>
          </Grid>
        </Border>

    </Grid>

</UserControl>
