<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FinanzRechner.ViewModels.Calculators"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="FinanzRechner.Views.Calculators.InflationView"
             x:DataType="vm:InflationViewModel"
             AutomationProperties.AutomationId="Inflation_Root">

    <Grid RowDefinitions="Auto,*,Auto"
          AutomationProperties.AutomationId="Inflation_Grid_Root">

        <!-- Header Banner (Orange fuer Inflation) -->
        <Border Grid.Row="0"
                AutomationProperties.AutomationId="Inflation_BannerHeader"
                Padding="16,12,16,20"
                CornerRadius="0,0,24,24">
          <Border.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#F97316" Offset="0" />
              <GradientStop Color="#EA580C" Offset="1" />
            </LinearGradientBrush>
          </Border.Background>
          <Grid ColumnDefinitions="Auto,*"
                AutomationProperties.AutomationId="Inflation_Grid_Header">
            <Button Command="{Binding GoBackCommand}"
                    AutomationProperties.AutomationId="Inflation_BtnBack"
                    Background="#33FFFFFF"
                    CornerRadius="20"
                    Width="40" Height="40"
                    Padding="0">
              <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White"
                               AutomationProperties.AutomationId="Inflation_Icon_Back" />
            </Button>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                        AutomationProperties.AutomationId="Inflation_Panel_HeaderTitle"
                        Margin="12,0,0,0" VerticalAlignment="Center">
              <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40"
                      AutomationProperties.AutomationId="Inflation_Border_TitleIcon">
                <mi:MaterialIcon Kind="CurrencyUsd" Width="22" Height="22"
                                 AutomationProperties.AutomationId="Inflation_Icon_Title"
                                 Foreground="White"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <TextBlock Text="{Binding TitleText}"
                         AutomationProperties.AutomationId="Inflation_TxtTitle"
                         FontSize="20" FontWeight="Bold" Foreground="White"
                         VerticalAlignment="Center" />
            </StackPanel>
          </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      AutomationProperties.AutomationId="Inflation_ScrollContent">
            <StackPanel Spacing="16" Margin="16,16,16,0"
                        AutomationProperties.AutomationId="Inflation_Panel_Content">

                <!-- Input Card -->
                <Border Classes="Card StatsCard"
                        AutomationProperties.AutomationId="Inflation_CardInput">
                    <StackPanel Spacing="14"
                                AutomationProperties.AutomationId="Inflation_Panel_InputFields">

                        <!-- Aktueller Betrag -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="Inflation_Panel_CurrentAmount">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Inflation_Panel_CurrentAmountLabel">
                                <mi:MaterialIcon Kind="CashMultiple" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="Inflation_Icon_CurrentAmount"
                                                 Foreground="#F97316" />
                                <TextBlock Text="{Binding CurrentAmountText}"
                                           AutomationProperties.AutomationId="Inflation_TxtCurrentAmountLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding CurrentAmount}"
                                     AutomationProperties.AutomationId="Inflation_InputCurrentAmount"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Inflationsrate -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="Inflation_Panel_InflationRate">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Inflation_Panel_InflationRateLabel">
                                <mi:MaterialIcon Kind="Percent" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="Inflation_Icon_InflationRate"
                                                 Foreground="#F97316" />
                                <TextBlock Text="{Binding AnnualInflationRateText}"
                                           AutomationProperties.AutomationId="Inflation_TxtInflationRateLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding AnnualInflationRate}"
                                     AutomationProperties.AutomationId="Inflation_InputInflationRate"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Jahre -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="Inflation_Panel_Years">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Inflation_Panel_YearsLabel">
                                <mi:MaterialIcon Kind="CalendarRange" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="Inflation_Icon_Years"
                                                 Foreground="#F97316" />
                                <TextBlock Text="{Binding YearsText}"
                                           AutomationProperties.AutomationId="Inflation_TxtYearsLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding Years}"
                                     AutomationProperties.AutomationId="Inflation_InputYears"
                                     Watermark="1"
                                     TextInputOptions.ContentType="Digits"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- Fehlermeldung bei Ãœberlauf -->
                <Border Classes="Card"
                        AutomationProperties.AutomationId="Inflation_CardError"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="8"
                                AutomationProperties.AutomationId="Inflation_Panel_Error">
                        <mi:MaterialIcon Kind="AlertCircle" Width="20" Height="20"
                                         AutomationProperties.AutomationId="Inflation_Icon_Error"
                                         Foreground="{DynamicResource ExpenseBrush}" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   AutomationProperties.AutomationId="Inflation_TxtError"
                                   Foreground="{DynamicResource ExpenseBrush}"
                                   FontSize="14" TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Result Card -->
                <Border Classes="Card Elevated StatsCard"
                        AutomationProperties.AutomationId="Inflation_CardResult"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="12"
                                AutomationProperties.AutomationId="Inflation_Panel_Result">
                        <StackPanel Orientation="Horizontal" Spacing="8"
                                    AutomationProperties.AutomationId="Inflation_Panel_ResultHeader">
                            <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                                             AutomationProperties.AutomationId="Inflation_Icon_Result"
                                             Foreground="#F97316" />
                            <TextBlock Text="{Binding ResultText}"
                                       AutomationProperties.AutomationId="Inflation_TxtResultHeader"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Primaeres Ergebnis: Kaufkraft -->
                        <Border CornerRadius="12"
                                AutomationProperties.AutomationId="Inflation_CardPurchasingPower"
                                Padding="16,12">
                          <Border.Background>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                              <GradientStop Color="#F97316" Offset="0" />
                              <GradientStop Color="#EA580C" Offset="1" />
                            </LinearGradientBrush>
                          </Border.Background>
                          <StackPanel AutomationProperties.AutomationId="Inflation_Panel_PurchasingPower">
                            <TextBlock Text="{Binding PurchasingPowerText}"
                                       AutomationProperties.AutomationId="Inflation_TxtPurchasingPowerLabel"
                                       FontSize="12" Foreground="#CCFFFFFF" />
                            <TextBlock Text="{Binding PurchasingPowerDisplay}"
                                       AutomationProperties.AutomationId="Inflation_TxtPurchasingPower"
                                       FontSize="28" FontWeight="Bold" Foreground="White" />
                          </StackPanel>
                        </Border>

                        <!-- Sekundaere Ergebnisse -->
                        <Grid ColumnDefinitions="*,Auto" Margin="4,0"
                              AutomationProperties.AutomationId="Inflation_Grid_PurchasingPowerLoss">
                            <TextBlock Text="{Binding PurchasingPowerLossText}"
                                       AutomationProperties.AutomationId="Inflation_TxtPurchasingPowerLossLabel"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding PurchasingPowerLossDisplay}"
                                       AutomationProperties.AutomationId="Inflation_TxtPurchasingPowerLoss"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="#EF4444"/>
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto" Margin="4,0"
                              AutomationProperties.AutomationId="Inflation_Grid_FutureValue">
                            <TextBlock Text="{Binding FutureValueText}"
                                       AutomationProperties.AutomationId="Inflation_TxtFutureValueLabel"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding FutureValueDisplay}"
                                       AutomationProperties.AutomationId="Inflation_TxtFutureValue"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto" Margin="4,0"
                              AutomationProperties.AutomationId="Inflation_Grid_LossPercent">
                            <TextBlock Text="{Binding LossPercentText}"
                                       AutomationProperties.AutomationId="Inflation_TxtLossPercentLabel"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding LossPercentDisplay}"
                                       AutomationProperties.AutomationId="Inflation_TxtLossPercent"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="#EF4444"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Chart Card -->
                <Border Classes="Card Elevated StatsCard"
                        AutomationProperties.AutomationId="Inflation_CardChart"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="8"
                                AutomationProperties.AutomationId="Inflation_Panel_Chart">
                        <StackPanel Orientation="Horizontal" Spacing="8"
                                    AutomationProperties.AutomationId="Inflation_Panel_ChartHeader">
                            <mi:MaterialIcon Kind="ChartLine" Width="20" Height="20"
                                             AutomationProperties.AutomationId="Inflation_Icon_Chart"
                                             Foreground="#F97316" />
                            <TextBlock Text="{Binding PurchasingPowerLossChartText}"
                                       AutomationProperties.AutomationId="Inflation_TxtChartTitle"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <skia:SKCanvasView x:Name="StackedAreaCanvas"
                                            AutomationProperties.AutomationId="Inflation_CanvasChart"
                                            PaintSurface="OnPaintStackedArea"
                                            Height="220" />

                        <!-- Legende -->
                        <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center"
                                    AutomationProperties.AutomationId="Inflation_Panel_Legend">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Inflation_Panel_LegendPurchasingPower">
                                <Border Background="#22C55E" Width="12" Height="12" CornerRadius="6"
                                        AutomationProperties.AutomationId="Inflation_Border_LegendPurchasingPowerColor"/>
                                <TextBlock Text="{Binding PurchasingPowerText}" FontSize="12"
                                           AutomationProperties.AutomationId="Inflation_TxtLegendPurchasingPower"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Inflation_Panel_LegendLoss">
                                <Border Background="#EF4444" Width="12" Height="12" CornerRadius="6"
                                        AutomationProperties.AutomationId="Inflation_Border_LegendLossColor"/>
                                <TextBlock Text="{Binding PurchasingPowerLossText}" FontSize="12"
                                           AutomationProperties.AutomationId="Inflation_TxtLegendLoss"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Height="16"
                        AutomationProperties.AutomationId="Inflation_Border_BottomSpacer" />

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}"
                AutomationProperties.AutomationId="Inflation_SectionActions">
          <Grid ColumnDefinitions="*,12,*"
                AutomationProperties.AutomationId="Inflation_Grid_Actions">
            <Button Command="{Binding ResetCommand}" Classes="Outlined"
                    AutomationProperties.AutomationId="Inflation_BtnReset"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8"
                          AutomationProperties.AutomationId="Inflation_Panel_ResetContent">
                <mi:MaterialIcon Kind="Refresh" Width="20" Height="20"
                                 AutomationProperties.AutomationId="Inflation_Icon_Reset" />
                <TextBlock Text="{Binding ResetText}" VerticalAlignment="Center"
                           AutomationProperties.AutomationId="Inflation_Txt_Reset" />
              </StackPanel>
            </Button>
            <Button Grid.Column="2" Command="{Binding CalculateCommand}" Classes="Primary"
                    AutomationProperties.AutomationId="Inflation_BtnCalculate"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8"
                          AutomationProperties.AutomationId="Inflation_Panel_CalculateContent">
                <mi:MaterialIcon Kind="Calculator" Width="20" Height="20"
                                 AutomationProperties.AutomationId="Inflation_Icon_Calculate" />
                <TextBlock Text="{Binding CalculateText}" VerticalAlignment="Center"
                           AutomationProperties.AutomationId="Inflation_Txt_Calculate" />
              </StackPanel>
            </Button>
          </Grid>
        </Border>

    </Grid>

</UserControl>
