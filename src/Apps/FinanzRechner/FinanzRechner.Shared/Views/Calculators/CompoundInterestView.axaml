<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FinanzRechner.ViewModels.Calculators"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             x:Class="FinanzRechner.Views.Calculators.CompoundInterestView"
             x:DataType="vm:CompoundInterestViewModel">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ═══════ Header Banner ═══════ -->
        <Border Grid.Row="0"
                Background="{DynamicResource IncomeBrush}"
                Padding="16,12,16,20"
                CornerRadius="0,0,24,24">
          <Grid ColumnDefinitions="Auto,*">
            <Button Command="{Binding GoBackCommand}"
                    Background="#33FFFFFF"
                    CornerRadius="20"
                    Width="40" Height="40"
                    Padding="0">
              <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
            </Button>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                        Margin="12,0,0,0" VerticalAlignment="Center">
              <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
                <mi:MaterialIcon Kind="TrendingUp" Width="22" Height="22"
                                 Foreground="White"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <TextBlock Text="{Binding TitleText}"
                         FontSize="20" FontWeight="Bold" Foreground="White"
                         VerticalAlignment="Center" />
            </StackPanel>
          </Grid>
        </Border>

        <!-- ═══════ Content ═══════ -->
        <ScrollViewer Grid.Row="1" Padding="16,16,16,0">
            <StackPanel Spacing="16">

                <!-- Input Card -->
                <Border Classes="Card">
                    <StackPanel Spacing="14">

                        <!-- Principal -->
                        <StackPanel Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="CashMultiple" Width="16" Height="16"
                                                 Foreground="{DynamicResource IncomeBrush}" />
                                <TextBlock Text="{Binding PrincipalText}"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding Principal}"
                                     Watermark="0.00"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Annual Rate -->
                        <StackPanel Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="Percent" Width="16" Height="16"
                                                 Foreground="{DynamicResource IncomeBrush}" />
                                <TextBlock Text="{Binding AnnualRateText}"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding AnnualRate}"
                                     Watermark="0.00"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Years -->
                        <StackPanel Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="CalendarRange" Width="16" Height="16"
                                                 Foreground="{DynamicResource IncomeBrush}" />
                                <TextBlock Text="{Binding YearsText}"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding Years}"
                                     Watermark="1"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Compoundings per Year -->
                        <StackPanel Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="Refresh" Width="16" Height="16"
                                                 Foreground="{DynamicResource IncomeBrush}" />
                                <TextBlock Text="{Binding CompoundingsPerYearText}"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding CompoundingsPerYear}"
                                     Watermark="12"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- Result Card -->
                <Border Classes="Card Elevated"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                                             Foreground="{DynamicResource IncomeBrush}" />
                            <TextBlock Text="{Binding ResultText}"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Primary Result Highlight -->
                        <Border Background="{DynamicResource IncomeBrush}"
                                CornerRadius="12"
                                Padding="16,12">
                          <StackPanel>
                            <TextBlock Text="{Binding FinalAmountText}"
                                       FontSize="12" Foreground="#CCFFFFFF" />
                            <TextBlock Text="{Binding FinalAmountDisplay}"
                                       FontSize="28" FontWeight="Bold" Foreground="White" />
                          </StackPanel>
                        </Border>

                        <!-- Secondary Results -->
                        <Grid ColumnDefinitions="*,Auto" Margin="4,0">
                            <TextBlock Text="{Binding InterestEarnedText}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding InterestEarnedDisplay}"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Chart Card -->
                <Border Classes="Card Elevated"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <mi:MaterialIcon Kind="ChartLine" Width="20" Height="20"
                                             Foreground="{DynamicResource IncomeBrush}" />
                            <TextBlock Text="{Binding CapitalGrowthText}"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <lvc:CartesianChart Series="{Binding ChartSeries}"
                                            XAxes="{Binding XAxes}"
                                            YAxes="{Binding YAxes}"
                                            Height="220"
                                            ZoomMode="None"
                                            TooltipPosition="Top"/>
                    </StackPanel>
                </Border>

                <Border Height="16" />

            </StackPanel>
        </ScrollViewer>

        <!-- ═══════ Action Buttons ═══════ -->
        <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}">
          <Grid ColumnDefinitions="*,12,*">
            <Button Command="{Binding ResetCommand}" Classes="Outlined"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8">
                <mi:MaterialIcon Kind="Refresh" Width="20" Height="20" />
                <TextBlock Text="{Binding ResetText}" VerticalAlignment="Center" />
              </StackPanel>
            </Button>
            <Button Grid.Column="2" Command="{Binding CalculateCommand}" Classes="Primary"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8">
                <mi:MaterialIcon Kind="Calculator" Width="20" Height="20" />
                <TextBlock Text="{Binding CalculateText}" VerticalAlignment="Center" />
              </StackPanel>
            </Button>
          </Grid>
        </Border>

    </Grid>

</UserControl>
