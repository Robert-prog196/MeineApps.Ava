<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FinanzRechner.ViewModels.Calculators"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="FinanzRechner.Views.Calculators.YieldView"
             x:DataType="vm:YieldViewModel">

    <Grid RowDefinitions="Auto,*,Auto"
          AutomationProperties.AutomationId="Yield_Root">

        <!-- ═══════ Header Banner ═══════ -->
        <Border Grid.Row="0"
                AutomationProperties.AutomationId="Yield_BannerHeader"
                Background="{DynamicResource ExpenseBrush}"
                Padding="16,12,16,20"
                CornerRadius="0,0,24,24">
          <Grid ColumnDefinitions="Auto,*"
                AutomationProperties.AutomationId="Yield_Grid_Header">
            <Button Command="{Binding GoBackCommand}"
                    AutomationProperties.AutomationId="Yield_BtnBack"
                    Background="#33FFFFFF"
                    CornerRadius="20"
                    Width="40" Height="40"
                    Padding="0">
              <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White"
                               AutomationProperties.AutomationId="Yield_Icon_Back" />
            </Button>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                        AutomationProperties.AutomationId="Yield_Panel_HeaderTitle"
                        Margin="12,0,0,0" VerticalAlignment="Center">
              <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40"
                      AutomationProperties.AutomationId="Yield_Border_TitleIcon">
                <mi:MaterialIcon Kind="ChartArc" Width="22" Height="22"
                                 AutomationProperties.AutomationId="Yield_Icon_Title"
                                 Foreground="White"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <TextBlock Text="{Binding TitleText}"
                         AutomationProperties.AutomationId="Yield_TxtTitle"
                         FontSize="20" FontWeight="Bold" Foreground="White"
                         VerticalAlignment="Center" />
            </StackPanel>
          </Grid>
        </Border>

        <!-- ═══════ Content ═══════ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      AutomationProperties.AutomationId="Yield_ScrollContent">
            <StackPanel Spacing="16" Margin="16,16,16,0"
                        AutomationProperties.AutomationId="Yield_Panel_Content">

                <!-- Input Card -->
                <Border Classes="Card StatsCard"
                        AutomationProperties.AutomationId="Yield_CardInput">
                    <StackPanel Spacing="14"
                                AutomationProperties.AutomationId="Yield_Panel_InputFields">

                        <!-- Initial Investment -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="Yield_Panel_InitialInvestment">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Yield_Panel_InitialInvestmentLabel">
                                <mi:MaterialIcon Kind="CashMultiple" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="Yield_Icon_InitialInvestment"
                                                 Foreground="{DynamicResource ExpenseBrush}" />
                                <TextBlock Text="{Binding InitialInvestmentText}"
                                           AutomationProperties.AutomationId="Yield_TxtInitialInvestmentLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding InitialInvestment}"
                                     AutomationProperties.AutomationId="Yield_InputInitialInvestment"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Final Value -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="Yield_Panel_FinalValue">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Yield_Panel_FinalValueLabel">
                                <mi:MaterialIcon Kind="TrendingUp" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="Yield_Icon_FinalValue"
                                                 Foreground="{DynamicResource ExpenseBrush}" />
                                <TextBlock Text="{Binding FinalValueText}"
                                           AutomationProperties.AutomationId="Yield_TxtFinalValueLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding FinalValue}"
                                     AutomationProperties.AutomationId="Yield_InputFinalValue"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Years -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="Yield_Panel_Years">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Yield_Panel_YearsLabel">
                                <mi:MaterialIcon Kind="CalendarRange" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="Yield_Icon_Years"
                                                 Foreground="{DynamicResource ExpenseBrush}" />
                                <TextBlock Text="{Binding YearsText}"
                                           AutomationProperties.AutomationId="Yield_TxtYearsLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding Years}"
                                     AutomationProperties.AutomationId="Yield_InputYears"
                                     Watermark="1"
                                     TextInputOptions.ContentType="Digits"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- Fehlermeldung bei Überlauf -->
                <Border Classes="Card"
                        AutomationProperties.AutomationId="Yield_CardError"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="8"
                                AutomationProperties.AutomationId="Yield_Panel_Error">
                        <mi:MaterialIcon Kind="AlertCircle" Width="20" Height="20"
                                         AutomationProperties.AutomationId="Yield_Icon_Error"
                                         Foreground="{DynamicResource ExpenseBrush}" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   AutomationProperties.AutomationId="Yield_TxtError"
                                   Foreground="{DynamicResource ExpenseBrush}"
                                   FontSize="14" TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Result Card -->
                <Border Classes="Card Elevated StatsCard"
                        AutomationProperties.AutomationId="Yield_CardResult"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="12"
                                AutomationProperties.AutomationId="Yield_Panel_Result">
                        <StackPanel Orientation="Horizontal" Spacing="8"
                                    AutomationProperties.AutomationId="Yield_Panel_ResultHeader">
                            <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                                             AutomationProperties.AutomationId="Yield_Icon_Result"
                                             Foreground="{DynamicResource ExpenseBrush}" />
                            <TextBlock Text="{Binding ResultText}"
                                       AutomationProperties.AutomationId="Yield_TxtResultTitle"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Primary Result Highlight -->
                        <Border Background="{DynamicResource ExpenseBrush}"
                                AutomationProperties.AutomationId="Yield_CardAnnualRate"
                                CornerRadius="12"
                                Padding="16,12">
                          <StackPanel AutomationProperties.AutomationId="Yield_Panel_AnnualRate">
                            <TextBlock Text="{Binding EffectiveAnnualRateText}"
                                       AutomationProperties.AutomationId="Yield_TxtAnnualRateLabel"
                                       FontSize="12" Foreground="#CCFFFFFF" />
                            <TextBlock Text="{Binding EffectiveAnnualRateDisplay}"
                                       AutomationProperties.AutomationId="Yield_TxtAnnualRateValue"
                                       FontSize="28" FontWeight="Bold" Foreground="White" />
                          </StackPanel>
                        </Border>

                        <!-- Secondary Results -->
                        <StackPanel Spacing="8" Margin="4,0"
                                    AutomationProperties.AutomationId="Yield_Panel_SecondaryResults">
                          <Grid ColumnDefinitions="*,Auto"
                                AutomationProperties.AutomationId="Yield_Grid_TotalReturn">
                            <TextBlock Text="{Binding TotalReturnText}"
                                       AutomationProperties.AutomationId="Yield_TxtTotalReturnLabel"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding TotalReturnDisplay}"
                                       AutomationProperties.AutomationId="Yield_TxtTotalReturnValue"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                          </Grid>
                          <Border Height="1" Background="{DynamicResource BorderSubtleBrush}"
                                  AutomationProperties.AutomationId="Yield_Border_ResultDivider" />
                          <Grid ColumnDefinitions="*,Auto"
                                AutomationProperties.AutomationId="Yield_Grid_TotalReturnPercent">
                            <TextBlock Text="{Binding TotalReturnPercentText}"
                                       AutomationProperties.AutomationId="Yield_TxtTotalReturnPercentLabel"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding TotalReturnPercentDisplay}"
                                       AutomationProperties.AutomationId="Yield_TxtTotalReturnPercentValue"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource IncomeBrush}"/>
                          </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Chart Card -->
                <Border Classes="Card Elevated StatsCard"
                        AutomationProperties.AutomationId="Yield_CardChart"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="8"
                                AutomationProperties.AutomationId="Yield_Panel_Chart">
                        <StackPanel Orientation="Horizontal" Spacing="8"
                                    AutomationProperties.AutomationId="Yield_Panel_ChartHeader">
                            <mi:MaterialIcon Kind="ChartBar" Width="20" Height="20"
                                             AutomationProperties.AutomationId="Yield_Icon_Chart"
                                             Foreground="{DynamicResource ExpenseBrush}" />
                            <TextBlock Text="{Binding InvestmentComparisonText}"
                                       AutomationProperties.AutomationId="Yield_TxtChartTitle"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <skia:SKCanvasView x:Name="DonutCanvas"
                                            AutomationProperties.AutomationId="Yield_CanvasChart"
                                            PaintSurface="OnPaintDonut"
                                            Height="200" />

                        <!-- Legende -->
                        <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center"
                                    AutomationProperties.AutomationId="Yield_Panel_Legend">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Yield_Panel_LegendInitial">
                                <Border Background="#3B82F6" Width="12" Height="12" CornerRadius="6"
                                        AutomationProperties.AutomationId="Yield_Border_LegendInitialColor"/>
                                <TextBlock Text="{Binding InitialLegendText}" FontSize="12"
                                           AutomationProperties.AutomationId="Yield_TxtLegendInitial"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Yield_Panel_LegendReturn">
                                <Border Background="#22C55E" Width="12" Height="12" CornerRadius="6"
                                        AutomationProperties.AutomationId="Yield_Border_LegendReturnColor"/>
                                <TextBlock Text="{Binding TotalReturnText}" FontSize="12"
                                           AutomationProperties.AutomationId="Yield_TxtLegendReturn"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Height="16"
                        AutomationProperties.AutomationId="Yield_Border_BottomSpacer" />

            </StackPanel>
        </ScrollViewer>

        <!-- ═══════ Action Buttons ═══════ -->
        <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}"
                AutomationProperties.AutomationId="Yield_SectionActions">
          <Grid ColumnDefinitions="*,12,*"
                AutomationProperties.AutomationId="Yield_Grid_Actions">
            <Button Command="{Binding ResetCommand}" Classes="Outlined"
                    AutomationProperties.AutomationId="Yield_BtnReset"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8"
                          AutomationProperties.AutomationId="Yield_Panel_ResetContent">
                <mi:MaterialIcon Kind="Refresh" Width="20" Height="20"
                                 AutomationProperties.AutomationId="Yield_Icon_Reset" />
                <TextBlock Text="{Binding ResetText}" VerticalAlignment="Center"
                           AutomationProperties.AutomationId="Yield_Txt_Reset" />
              </StackPanel>
            </Button>
            <Button Grid.Column="2" Command="{Binding CalculateCommand}" Classes="Primary"
                    AutomationProperties.AutomationId="Yield_BtnCalculate"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8"
                          AutomationProperties.AutomationId="Yield_Panel_CalculateContent">
                <mi:MaterialIcon Kind="Calculator" Width="20" Height="20"
                                 AutomationProperties.AutomationId="Yield_Icon_Calculate" />
                <TextBlock Text="{Binding CalculateText}" VerticalAlignment="Center"
                           AutomationProperties.AutomationId="Yield_Txt_Calculate" />
              </StackPanel>
            </Button>
          </Grid>
        </Border>

    </Grid>

</UserControl>
