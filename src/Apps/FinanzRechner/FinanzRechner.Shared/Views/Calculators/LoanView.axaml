<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FinanzRechner.ViewModels.Calculators"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="FinanzRechner.Views.Calculators.LoanView"
             x:DataType="vm:LoanViewModel">

    <Grid RowDefinitions="Auto,*,Auto"
          AutomationProperties.AutomationId="Loan_Root">

        <!-- ═══════ Header Banner ═══════ -->
        <Border Grid.Row="0"
                AutomationProperties.AutomationId="Loan_BannerHeader"
                Background="{DynamicResource WarningBrush}"
                Padding="16,12,16,20"
                CornerRadius="0,0,24,24">
          <Grid ColumnDefinitions="Auto,*"
                AutomationProperties.AutomationId="Loan_Grid_Header">
            <Button Command="{Binding GoBackCommand}"
                    AutomationProperties.AutomationId="Loan_BtnBack"
                    Background="#33FFFFFF"
                    CornerRadius="20"
                    Width="40" Height="40"
                    Padding="0">
              <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White"
                               AutomationProperties.AutomationId="Loan_Icon_Back" />
            </Button>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                        AutomationProperties.AutomationId="Loan_Panel_HeaderTitle"
                        Margin="12,0,0,0" VerticalAlignment="Center">
              <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40"
                      AutomationProperties.AutomationId="Loan_Border_TitleIcon">
                <mi:MaterialIcon Kind="Bank" Width="22" Height="22"
                                 AutomationProperties.AutomationId="Loan_Icon_Title"
                                 Foreground="White"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <TextBlock Text="{Binding TitleText}"
                         AutomationProperties.AutomationId="Loan_TxtTitle"
                         FontSize="20" FontWeight="Bold" Foreground="White"
                         VerticalAlignment="Center" />
            </StackPanel>
          </Grid>
        </Border>

        <!-- ═══════ Content ═══════ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      AutomationProperties.AutomationId="Loan_ScrollContent">
            <StackPanel Spacing="16" Margin="16,16,16,0"
                        AutomationProperties.AutomationId="Loan_Panel_Content">

                <!-- Input Card -->
                <Border Classes="Card StatsCard"
                        AutomationProperties.AutomationId="Loan_CardInput">
                    <StackPanel Spacing="14"
                                AutomationProperties.AutomationId="Loan_Panel_InputFields">

                        <!-- Loan Amount -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="Loan_Panel_LoanAmount">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Loan_Panel_LoanAmountLabel">
                                <mi:MaterialIcon Kind="CashMultiple" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="Loan_Icon_LoanAmount"
                                                 Foreground="{DynamicResource WarningBrush}" />
                                <TextBlock Text="{Binding LoanAmountText}"
                                           AutomationProperties.AutomationId="Loan_TxtLoanAmountLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding LoanAmount}"
                                     AutomationProperties.AutomationId="Loan_InputLoanAmount"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Annual Rate -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="Loan_Panel_AnnualRate">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Loan_Panel_AnnualRateLabel">
                                <mi:MaterialIcon Kind="Percent" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="Loan_Icon_AnnualRate"
                                                 Foreground="{DynamicResource WarningBrush}" />
                                <TextBlock Text="{Binding AnnualRateText}"
                                           AutomationProperties.AutomationId="Loan_TxtAnnualRateLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding AnnualRate}"
                                     AutomationProperties.AutomationId="Loan_InputAnnualRate"
                                     Watermark="0.00"
                                     TextInputOptions.ContentType="Number"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Years -->
                        <StackPanel Spacing="4"
                                    AutomationProperties.AutomationId="Loan_Panel_Years">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Loan_Panel_YearsLabel">
                                <mi:MaterialIcon Kind="CalendarRange" Width="16" Height="16"
                                                 AutomationProperties.AutomationId="Loan_Icon_Years"
                                                 Foreground="{DynamicResource WarningBrush}" />
                                <TextBlock Text="{Binding YearsText}"
                                           AutomationProperties.AutomationId="Loan_TxtYearsLabel"
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <TextBox Text="{Binding Years}"
                                     AutomationProperties.AutomationId="Loan_InputYears"
                                     Watermark="1"
                                     TextInputOptions.ContentType="Digits"
                                     Background="{DynamicResource ButtonFunctionBgBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- Fehlermeldung bei Überlauf -->
                <Border Classes="Card"
                        AutomationProperties.AutomationId="Loan_CardError"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <StackPanel Orientation="Horizontal" Spacing="8"
                                AutomationProperties.AutomationId="Loan_Panel_Error">
                        <mi:MaterialIcon Kind="AlertCircle" Width="20" Height="20"
                                         AutomationProperties.AutomationId="Loan_Icon_Error"
                                         Foreground="{DynamicResource ExpenseBrush}" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   AutomationProperties.AutomationId="Loan_TxtError"
                                   Foreground="{DynamicResource ExpenseBrush}"
                                   FontSize="14" TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Result Card -->
                <Border Classes="Card Elevated StatsCard"
                        AutomationProperties.AutomationId="Loan_CardResult"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="12"
                                AutomationProperties.AutomationId="Loan_Panel_Result">
                        <StackPanel Orientation="Horizontal" Spacing="8"
                                    AutomationProperties.AutomationId="Loan_Panel_ResultHeader">
                            <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                                             AutomationProperties.AutomationId="Loan_Icon_Result"
                                             Foreground="{DynamicResource WarningBrush}" />
                            <TextBlock Text="{Binding ResultText}"
                                       AutomationProperties.AutomationId="Loan_TxtResultTitle"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Primary Result Highlight -->
                        <Border Background="{DynamicResource WarningBrush}"
                                AutomationProperties.AutomationId="Loan_CardMonthlyPayment"
                                CornerRadius="12"
                                Padding="16,12">
                          <StackPanel AutomationProperties.AutomationId="Loan_Panel_MonthlyPayment">
                            <TextBlock Text="{Binding MonthlyPaymentText}"
                                       AutomationProperties.AutomationId="Loan_TxtMonthlyPaymentLabel"
                                       FontSize="12" Foreground="#CCFFFFFF" />
                            <TextBlock Text="{Binding MonthlyPaymentDisplay}"
                                       AutomationProperties.AutomationId="Loan_TxtMonthlyPaymentValue"
                                       FontSize="28" FontWeight="Bold" Foreground="White" />
                          </StackPanel>
                        </Border>

                        <!-- Secondary Results -->
                        <StackPanel Spacing="8" Margin="4,0"
                                    AutomationProperties.AutomationId="Loan_Panel_SecondaryResults">
                          <Grid ColumnDefinitions="*,Auto"
                                AutomationProperties.AutomationId="Loan_Grid_TotalPayment">
                            <TextBlock Text="{Binding TotalPaymentText}"
                                       AutomationProperties.AutomationId="Loan_TxtTotalPaymentLabel"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding TotalPaymentDisplay}"
                                       AutomationProperties.AutomationId="Loan_TxtTotalPaymentValue"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                          </Grid>
                          <Border Height="1" Background="{DynamicResource BorderSubtleBrush}"
                                  AutomationProperties.AutomationId="Loan_Border_ResultDivider" />
                          <Grid ColumnDefinitions="*,Auto"
                                AutomationProperties.AutomationId="Loan_Grid_TotalInterest">
                            <TextBlock Text="{Binding TotalInterestText}"
                                       AutomationProperties.AutomationId="Loan_TxtTotalInterestLabel"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding TotalInterestDisplay}"
                                       AutomationProperties.AutomationId="Loan_TxtTotalInterestValue"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ExpenseBrush}"/>
                          </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Chart Card -->
                <Border Classes="Card Elevated StatsCard"
                        AutomationProperties.AutomationId="Loan_CardChart"
                        IsVisible="{Binding HasResult}">
                    <StackPanel Spacing="8"
                                AutomationProperties.AutomationId="Loan_Panel_Chart">
                        <StackPanel Orientation="Horizontal" Spacing="8"
                                    AutomationProperties.AutomationId="Loan_Panel_ChartHeader">
                            <mi:MaterialIcon Kind="ChartDonut" Width="20" Height="20"
                                             AutomationProperties.AutomationId="Loan_Icon_Chart"
                                             Foreground="{DynamicResource WarningBrush}" />
                            <TextBlock Text="{Binding CostBreakdownText}"
                                       AutomationProperties.AutomationId="Loan_TxtChartTitle"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <skia:SKCanvasView x:Name="DonutCanvas"
                                            AutomationProperties.AutomationId="Loan_CanvasChart"
                                            PaintSurface="OnPaintDonut"
                                            Height="200" />

                        <!-- Legend -->
                        <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center"
                                    AutomationProperties.AutomationId="Loan_Panel_Legend">
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Loan_Panel_LegendPrincipal">
                                <Border Background="#22C55E" Width="12" Height="12" CornerRadius="6"
                                        AutomationProperties.AutomationId="Loan_Border_LegendPrincipalColor"/>
                                <TextBlock Text="{Binding PrincipalPortionText}" FontSize="12"
                                           AutomationProperties.AutomationId="Loan_TxtLegendPrincipal"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="6"
                                        AutomationProperties.AutomationId="Loan_Panel_LegendInterest">
                                <Border Background="#F59E0B" Width="12" Height="12" CornerRadius="6"
                                        AutomationProperties.AutomationId="Loan_Border_LegendInterestColor"/>
                                <TextBlock Text="{Binding InterestPortionText}" FontSize="12"
                                           AutomationProperties.AutomationId="Loan_TxtLegendInterest"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Height="16"
                        AutomationProperties.AutomationId="Loan_Border_BottomSpacer" />

            </StackPanel>
        </ScrollViewer>

        <!-- ═══════ Action Buttons ═══════ -->
        <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}"
                AutomationProperties.AutomationId="Loan_SectionActions">
          <Grid ColumnDefinitions="*,12,*"
                AutomationProperties.AutomationId="Loan_Grid_Actions">
            <Button Command="{Binding ResetCommand}" Classes="Outlined"
                    AutomationProperties.AutomationId="Loan_BtnReset"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8"
                          AutomationProperties.AutomationId="Loan_Panel_ResetContent">
                <mi:MaterialIcon Kind="Refresh" Width="20" Height="20"
                                 AutomationProperties.AutomationId="Loan_Icon_Reset" />
                <TextBlock Text="{Binding ResetText}" VerticalAlignment="Center"
                           AutomationProperties.AutomationId="Loan_Txt_Reset" />
              </StackPanel>
            </Button>
            <Button Grid.Column="2" Command="{Binding CalculateCommand}" Classes="Primary"
                    AutomationProperties.AutomationId="Loan_BtnCalculate"
                    HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
              <StackPanel Orientation="Horizontal" Spacing="8"
                          AutomationProperties.AutomationId="Loan_Panel_CalculateContent">
                <mi:MaterialIcon Kind="Calculator" Width="20" Height="20"
                                 AutomationProperties.AutomationId="Loan_Icon_Calculate" />
                <TextBlock Text="{Binding CalculateText}" VerticalAlignment="Center"
                           AutomationProperties.AutomationId="Loan_Txt_Calculate" />
              </StackPanel>
            </Button>
          </Grid>
        </Border>

    </Grid>

</UserControl>
