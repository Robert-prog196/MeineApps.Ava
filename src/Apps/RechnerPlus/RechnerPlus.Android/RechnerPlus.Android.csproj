<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0-android</TargetFramework>
    <OutputType>Exe</OutputType>

    <!-- App Identity -->
    <ApplicationId>com.meineapps.rechnerplus</ApplicationId>
    <ApplicationTitle>RechnerPlus</ApplicationTitle>
    <ApplicationVersion>26</ApplicationVersion>
    <ApplicationDisplayVersion>2.0.2</ApplicationDisplayVersion>

    <!-- Android Settings -->
    <SupportedOSPlatformVersion>24</SupportedOSPlatformVersion>
    <RuntimeIdentifiers>android-arm64;android-x64</RuntimeIdentifiers>

    <!-- Release-Crash-Fix: AOT + Trimming komplett deaktivieren -->
    <RunAOTCompilation>false</RunAOTCompilation>
    <PublishTrimmed>false</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Android" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RechnerPlus.Shared\RechnerPlus.Shared.csproj" />
  </ItemGroup>

</Project>
