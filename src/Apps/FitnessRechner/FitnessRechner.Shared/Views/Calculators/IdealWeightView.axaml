<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FitnessRechner.ViewModels.Calculators"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:uiBehaviors="using:MeineApps.UI.Behaviors"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             x:Class="FitnessRechner.Views.Calculators.IdealWeightView"
             x:DataType="vm:IdealWeightViewModel">

  <Grid RowDefinitions="Auto,*,Auto"
        AutomationProperties.AutomationId="Ideal_RootPanel">

    <!-- ═══════ Header Banner ═══════ -->
    <Border Grid.Row="0"
            AutomationProperties.AutomationId="Ideal_HeaderBanner"
            Background="{DynamicResource IncomeBrush}"
            Padding="16,12,16,20"
            CornerRadius="0,0,24,24">
      <Grid ColumnDefinitions="Auto,*">
        <Button AutomationProperties.AutomationId="Ideal_BtnBack"
                Command="{Binding GoBackCommand}"
                Background="#33FFFFFF"
                CornerRadius="20"
                Width="40" Height="40"
                Padding="0">
          <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
        </Button>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                    Margin="12,0,0,0" VerticalAlignment="Center">
          <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
            <mi:MaterialIcon Kind="ScaleBalance" Width="22" Height="22"
                             Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <TextBlock AutomationProperties.AutomationId="Ideal_TxtTitle"
                     Text="{loc:Translate CalcIdealWeight}"
                     FontSize="20" FontWeight="Bold" Foreground="White"
                     VerticalAlignment="Center" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- ═══════ Content ═══════ -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                  AutomationProperties.AutomationId="Ideal_ScrollViewer">
      <StackPanel Spacing="16" Margin="16,16,16,0">

        <!-- Input Card -->
        <Border Classes="Card"
                AutomationProperties.AutomationId="Ideal_CardInput">
          <StackPanel Spacing="14">

            <!-- Height -->
            <StackPanel Spacing="4">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="HumanMaleHeight" Width="16" Height="16"
                                 Foreground="{DynamicResource IncomeBrush}" />
                <TextBlock Text="{loc:Translate Height}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <TextBox AutomationProperties.AutomationId="Ideal_TxtBoxHeight"
                       Text="{Binding Height}"
                       Watermark="cm"
                       TextInputOptions.ContentType="Number"
                       Background="{DynamicResource ButtonFunctionBgBrush}"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            </StackPanel>

            <!-- Age -->
            <StackPanel Spacing="4">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="CalendarRange" Width="16" Height="16"
                                 Foreground="{DynamicResource IncomeBrush}" />
                <TextBlock Text="{loc:Translate Age}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <TextBox AutomationProperties.AutomationId="Ideal_TxtBoxAge"
                       Text="{Binding Age}"
                       Watermark="{loc:Translate Years}"
                       TextInputOptions.ContentType="Digits"
                       Background="{DynamicResource ButtonFunctionBgBrush}"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            </StackPanel>

            <!-- Gender -->
            <StackPanel Spacing="4">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="GenderMaleFemale" Width="16" Height="16"
                                 Foreground="{DynamicResource IncomeBrush}" />
                <TextBlock Text="{loc:Translate Gender}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <StackPanel Orientation="Horizontal" Spacing="16">
                <RadioButton AutomationProperties.AutomationId="Ideal_RadioMale"
                             Content="{loc:Translate Male}"
                             IsChecked="{Binding IsMale}"
                             GroupName="Gender" />
                <RadioButton AutomationProperties.AutomationId="Ideal_RadioFemale"
                             Content="{loc:Translate Female}"
                             IsChecked="{Binding IsMale, Converter={x:Static BoolConverters.Not}}"
                             GroupName="Gender" />
              </StackPanel>
            </StackPanel>

          </StackPanel>
        </Border>

        <!-- Result Card -->
        <Border Classes="Card Elevated"
                AutomationProperties.AutomationId="Ideal_CardResult"
                IsVisible="{Binding HasResult}">
          <StackPanel Spacing="12">

            <!-- Result Header -->
            <StackPanel Orientation="Horizontal" Spacing="8">
              <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                               Foreground="{DynamicResource IncomeBrush}" />
              <TextBlock AutomationProperties.AutomationId="Ideal_TxtResultHeader"
                         Text="{loc:Translate Result}"
                         FontSize="16" FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryBrush}"/>
            </StackPanel>

            <!-- Primary Result Highlight -->
            <Border AutomationProperties.AutomationId="Ideal_CardValue"
                    Background="{DynamicResource IncomeBrush}"
                    CornerRadius="12"
                    Padding="16,12">
              <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{loc:Translate CalcIdealWeight}"
                           FontSize="12" Foreground="#CCFFFFFF" HorizontalAlignment="Center" />
                <TextBlock AutomationProperties.AutomationId="Ideal_TxtResult"
                           FontSize="28" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center">
                  <i:Interaction.Behaviors>
                    <uiBehaviors:CountUpBehavior TargetValue="{Binding AverageIdealValue}" Format="F1" Suffix=" kg" Duration="500" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </StackPanel>
            </Border>

            <!-- Secondary Results -->
            <StackPanel Spacing="8" Margin="4,0">
              <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{loc:Translate BrocaWeight}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Grid.Column="1"
                           AutomationProperties.AutomationId="Ideal_TxtBroca"
                           Text="{Binding BrocaDisplay}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
              </Grid>
              <Border Height="1" Background="{DynamicResource BorderSubtleBrush}" />
              <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{loc:Translate CreffWeight}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Grid.Column="1"
                           AutomationProperties.AutomationId="Ideal_TxtCreff"
                           Text="{Binding CreffDisplay}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
              </Grid>
              <Border Height="1" Background="{DynamicResource BorderSubtleBrush}" />
              <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{loc:Translate HealthyRange}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Grid.Column="1"
                           AutomationProperties.AutomationId="Ideal_TxtHealthyRange"
                           Text="{Binding HealthyRangeDisplay}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
              </Grid>
            </StackPanel>

          </StackPanel>
        </Border>

        <Border Height="16" />

      </StackPanel>
    </ScrollViewer>

    <!-- ═══════ Action Buttons ═══════ -->
    <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}"
            AutomationProperties.AutomationId="Ideal_ActionBar">
      <Grid ColumnDefinitions="*,12,*">
        <Button AutomationProperties.AutomationId="Ideal_BtnReset"
                Command="{Binding ResetCommand}" Classes="Outlined"
                HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="Refresh" Width="20" Height="20" />
            <TextBlock Text="{loc:Translate Reset}" VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <Button Grid.Column="2" AutomationProperties.AutomationId="Ideal_BtnCalculate"
                Command="{Binding CalculateCommand}" Classes="Primary"
                HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="Calculator" Width="20" Height="20" />
            <TextBlock Text="{loc:Translate Calculate}" VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

  </Grid>

</UserControl>
