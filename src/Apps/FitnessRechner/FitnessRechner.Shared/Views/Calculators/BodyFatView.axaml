<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FitnessRechner.ViewModels.Calculators"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:uiBehaviors="using:MeineApps.UI.Behaviors"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="FitnessRechner.Views.Calculators.BodyFatView"
             x:DataType="vm:BodyFatViewModel">

  <Grid RowDefinitions="Auto,*,Auto">

    <!-- ═══════ Header Banner ═══════ -->
    <Border Grid.Row="0"
            Background="{DynamicResource ExpenseBrush}"
            Padding="16,12,16,20"
            CornerRadius="0,0,24,24">
      <Grid ColumnDefinitions="Auto,*">
        <Button Command="{Binding GoBackCommand}"
                Background="#33FFFFFF"
                CornerRadius="20"
                Width="40" Height="40"
                Padding="0">
          <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
        </Button>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                    Margin="12,0,0,0" VerticalAlignment="Center">
          <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
            <mi:MaterialIcon Kind="PercentCircle" Width="22" Height="22"
                             Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <TextBlock Text="{loc:Translate CalcBodyFat}"
                     FontSize="20" FontWeight="Bold" Foreground="White"
                     VerticalAlignment="Center" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- ═══════ Content ═══════ -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="16" Margin="16,16,16,0">

        <!-- Input Card -->
        <Border Classes="Card">
          <StackPanel Spacing="14">

            <!-- Gender -->
            <StackPanel Spacing="4">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="GenderMaleFemale" Width="16" Height="16"
                                 Foreground="{DynamicResource ExpenseBrush}" />
                <TextBlock Text="{loc:Translate Gender}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <StackPanel Orientation="Horizontal" Spacing="16">
                <RadioButton Content="{loc:Translate Male}"
                             IsChecked="{Binding IsMale}"
                             GroupName="Gender" />
                <RadioButton Content="{loc:Translate Female}"
                             IsChecked="{Binding IsMale, Converter={x:Static BoolConverters.Not}}"
                             GroupName="Gender" />
              </StackPanel>
            </StackPanel>

            <!-- Height -->
            <StackPanel Spacing="4">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="HumanMaleHeight" Width="16" Height="16"
                                 Foreground="{DynamicResource ExpenseBrush}" />
                <TextBlock Text="{loc:Translate Height}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <TextBox Text="{Binding Height}"
                       Watermark="cm"
                       TextInputOptions.ContentType="Number"
                       Background="{DynamicResource ButtonFunctionBgBrush}"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            </StackPanel>

            <!-- Neck -->
            <StackPanel Spacing="4">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="HumanGreeting" Width="16" Height="16"
                                 Foreground="{DynamicResource ExpenseBrush}" />
                <TextBlock Text="{loc:Translate Neck}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <TextBox Text="{Binding Neck}"
                       Watermark="cm"
                       TextInputOptions.ContentType="Number"
                       Background="{DynamicResource ButtonFunctionBgBrush}"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            </StackPanel>

            <!-- Waist -->
            <StackPanel Spacing="4">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="TapeMeasure" Width="16" Height="16"
                                 Foreground="{DynamicResource ExpenseBrush}" />
                <TextBlock Text="{loc:Translate Waist}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <TextBox Text="{Binding Waist}"
                       Watermark="cm"
                       TextInputOptions.ContentType="Number"
                       Background="{DynamicResource ButtonFunctionBgBrush}"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            </StackPanel>

            <!-- Hip (only visible for Female) -->
            <StackPanel Spacing="4"
                        IsVisible="{Binding !IsMale}">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="HumanFemale" Width="16" Height="16"
                                 Foreground="{DynamicResource ExpenseBrush}" />
                <TextBlock Text="{loc:Translate Hip}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <TextBox Text="{Binding Hip}"
                       Watermark="cm"
                       TextInputOptions.ContentType="Number"
                       Background="{DynamicResource ButtonFunctionBgBrush}"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            </StackPanel>

          </StackPanel>
        </Border>

        <!-- Result Card -->
        <Border Classes="Card Elevated"
                IsVisible="{Binding HasResult}">
          <StackPanel Spacing="12">

            <!-- Result Header -->
            <StackPanel Orientation="Horizontal" Spacing="8">
              <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                               Foreground="{DynamicResource ExpenseBrush}" />
              <TextBlock Text="{loc:Translate Result}"
                         FontSize="16" FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryBrush}"/>
            </StackPanel>

            <!-- Primary Result Highlight -->
            <Border Background="{DynamicResource ExpenseBrush}"
                    CornerRadius="12"
                    Padding="16,12">
              <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{loc:Translate CalcBodyFat}"
                           FontSize="12" Foreground="#CCFFFFFF" HorizontalAlignment="Center" />
                <TextBlock FontSize="28" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center">
                  <i:Interaction.Behaviors>
                    <uiBehaviors:CountUpBehavior TargetValue="{Binding BodyFatValue}" Format="F1" Suffix=" %" Duration="500" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </StackPanel>
            </Border>

            <!-- Körperfett-Visualisierung -->
            <Border Height="160" Margin="0,4,0,0" ClipToBounds="True" CornerRadius="8"
                    Background="{DynamicResource SurfaceBrush}">
              <skia:SKCanvasView PaintSurface="OnPaintBodyFat" />
            </Border>

            <!-- Secondary Results -->
            <StackPanel Spacing="8" Margin="4,0">
              <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{loc:Translate Category}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Grid.Column="1"
                           Text="{Binding CategoryDisplay}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
              </Grid>
            </StackPanel>

            <!-- Save to Tracking -->
            <Button Classes="Secondary"
                    Command="{Binding SaveToTrackingCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Margin="0,4,0,0">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="ContentSave" Width="18" Height="18" />
                <TextBlock Text="{loc:Translate SaveToTracking}"
                           VerticalAlignment="Center" />
              </StackPanel>
            </Button>

          </StackPanel>
        </Border>

        <Border Height="16" />

      </StackPanel>
    </ScrollViewer>

    <!-- ═══════ Action Buttons ═══════ -->
    <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}">
      <Grid ColumnDefinitions="*,12,*">
        <Button Command="{Binding ResetCommand}" Classes="Outlined"
                HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="Refresh" Width="20" Height="20" />
            <TextBlock Text="{loc:Translate Reset}" VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <Button Grid.Column="2" Command="{Binding CalculateCommand}" Classes="Primary"
                HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="Calculator" Width="20" Height="20" />
            <TextBlock Text="{loc:Translate Calculate}" VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

  </Grid>

</UserControl>
