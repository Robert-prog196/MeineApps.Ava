<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FitnessRechner.ViewModels.Calculators"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:uiBehaviors="using:MeineApps.UI.Behaviors"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="FitnessRechner.Views.Calculators.WaterView"
             x:DataType="vm:WaterViewModel">

  <Grid RowDefinitions="Auto,*,Auto">

    <!-- ============================================ -->
    <!-- Row 0: Header Banner (InfoBrush)             -->
    <!-- ============================================ -->
    <Border Grid.Row="0"
            Background="{DynamicResource InfoBrush}"
            Padding="16,12,16,20"
            CornerRadius="0,0,24,24">
      <Grid ColumnDefinitions="Auto,*">
        <Button Command="{Binding GoBackCommand}"
                Background="#33FFFFFF"
                CornerRadius="20"
                Width="40" Height="40"
                Padding="0">
          <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
        </Button>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                    Margin="12,0,0,0" VerticalAlignment="Center">
          <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
            <mi:MaterialIcon Kind="WaterOutline" Width="22" Height="22"
                             Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <TextBlock Text="{loc:Translate CalcWater}"
                     FontSize="20" FontWeight="Bold" Foreground="White"
                     VerticalAlignment="Center" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- ============================================ -->
    <!-- Row 1: Scrollable Content                    -->
    <!-- ============================================ -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="16" Margin="16,16,16,0">

        <!-- Input Section -->
        <Border Classes="StatsCard">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate Input}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />

            <!-- Weight -->
            <StackPanel Spacing="4">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="ScaleBalance" Width="16" Height="16"
                                 Foreground="{DynamicResource InfoBrush}" />
                <TextBlock Text="{loc:Translate Weight}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <TextBox Text="{Binding Weight}"
                       Watermark="kg"
                       TextInputOptions.ContentType="Number"
                       Classes="Outlined" />
            </StackPanel>

            <!-- Activity Minutes -->
            <StackPanel Spacing="4">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="Run" Width="16" Height="16"
                                 Foreground="{DynamicResource InfoBrush}" />
                <TextBlock Text="{loc:Translate ActivityMinutes}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <TextBox Text="{Binding ActivityMinutes}"
                       Watermark="{loc:Translate Minutes}"
                       TextInputOptions.ContentType="Digits"
                       Classes="Outlined" />
            </StackPanel>

            <!-- Hot Weather -->
            <Grid ColumnDefinitions="*,Auto">
              <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                <mi:MaterialIcon Kind="WeatherSunny" Width="16" Height="16"
                                 Foreground="{DynamicResource InfoBrush}" />
                <TextBlock Text="{loc:Translate HotWeather}"
                           FontSize="12" FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
              </StackPanel>
              <ToggleSwitch Grid.Column="1"
                            OnContent="" OffContent=""
                            IsChecked="{Binding IsHotWeather}" />
            </Grid>
          </StackPanel>
        </Border>

        <!-- Results Section -->
        <Border Classes="StatsCard"
                IsVisible="{Binding HasResult}">
          <StackPanel Spacing="12">

            <!-- Result Header -->
            <StackPanel Orientation="Horizontal" Spacing="8">
              <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                               Foreground="{DynamicResource InfoBrush}" />
              <TextBlock Text="{loc:Translate Result}"
                         FontSize="16" FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryBrush}"/>
            </StackPanel>

            <!-- Primary Result Highlight -->
            <Border Background="{DynamicResource InfoBrush}"
                    CornerRadius="12"
                    Padding="16,12">
              <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{loc:Translate CalcWater}"
                           FontSize="12" Foreground="#CCFFFFFF" HorizontalAlignment="Center" />
                <TextBlock FontSize="28" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center">
                  <i:Interaction.Behaviors>
                    <uiBehaviors:CountUpBehavior TargetValue="{Binding TotalLitersValue}" Format="F1" Suffix=" L" Duration="500" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </StackPanel>
            </Border>

            <!-- Glasses row (prominent) -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Text="{loc:Translate Glasses}" FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" />
              <TextBlock Grid.Column="1" Text="{Binding GlassesDisplay}"
                         FontSize="16" FontWeight="Bold"
                         Foreground="{DynamicResource InfoBrush}" />
            </Grid>

            <!-- Wasserglas-Visualisierung -->
            <Border Height="140" Margin="0,4,0,4" ClipToBounds="True" CornerRadius="8"
                    Background="{DynamicResource SurfaceBrush}">
              <skia:SKCanvasView PaintSurface="OnPaintWaterGlass" />
            </Border>

            <!-- Separator -->
            <Border Height="1" Background="{DynamicResource BorderSubtleBrush}" />

            <!-- Secondary Results with separators -->
            <StackPanel Spacing="8" Margin="4,0">
              <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{loc:Translate BaseWater}"
                           Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" Text="{Binding BaseWaterDisplay}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
              </Grid>
              <Border Height="1" Background="{DynamicResource BorderSubtleBrush}" />
              <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{loc:Translate ActivityWater}"
                           Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" Text="{Binding ActivityWaterDisplay}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
              </Grid>
              <Border Height="1" Background="{DynamicResource BorderSubtleBrush}" />
              <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{loc:Translate HeatWater}"
                           Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" Text="{Binding HeatWaterDisplay}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
              </Grid>
            </StackPanel>

            <!-- Save Water Goal -->
            <Button Classes="Secondary"
                    Command="{Binding SaveWaterGoalCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Margin="0,8,0,0">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <mi:MaterialIcon Kind="CupWater" Width="18" Height="18" />
                <TextBlock Text="{loc:Translate SaveWaterGoal}"
                           VerticalAlignment="Center" />
              </StackPanel>
            </Button>
          </StackPanel>
        </Border>

      </StackPanel>
    </ScrollViewer>

    <!-- ============================================ -->
    <!-- Row 2: Action Buttons                        -->
    <!-- ============================================ -->
    <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}">
      <Grid ColumnDefinitions="*,12,*">
        <Button Command="{Binding ResetCommand}" Classes="Outlined"
                HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="Refresh" Width="20" Height="20" />
            <TextBlock Text="{loc:Translate Reset}" VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <Button Grid.Column="2" Command="{Binding CalculateCommand}" Classes="Primary"
                HorizontalAlignment="Stretch" Height="48" CornerRadius="12">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="Calculator" Width="20" Height="20" />
            <TextBlock Text="{loc:Translate Calculate}" VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

  </Grid>

</UserControl>
