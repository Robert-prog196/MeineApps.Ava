<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FitnessRechner.ViewModels"
        xmlns:views="using:FitnessRechner.Views"
        xmlns:splash="using:MeineApps.UI.Controls"
        x:Class="FitnessRechner.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="FitnessRechner"
        Icon="avares://FitnessRechner.Shared/Assets/icon.png"
        Width="400"
        Height="750"
        MinWidth="360"
        MinHeight="500"
        Background="{DynamicResource BackgroundBrush}">

  <Panel AutomationProperties.AutomationId="MW_RootPanel">
    <views:MainView AutomationProperties.AutomationId="MW_MainView" />
    <splash:SplashOverlay AutomationProperties.AutomationId="MW_SplashOverlay"
                          AppName="FitnessRechner"
                          IconSource="avares://FitnessRechner.Shared/Assets/icon.png" />
  </Panel>

</Window>
