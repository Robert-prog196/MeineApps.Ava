<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:HandwerkerImperium.Views"
        xmlns:splash="using:MeineApps.UI.Controls"
        x:Class="HandwerkerImperium.Views.MainWindow"
        Title="HandwerkerImperium"
        Icon="avares://HandwerkerImperium.Shared/Assets/icon.png"
        Width="420" Height="800"
        MinWidth="360" MinHeight="600"
        Background="{DynamicResource BackgroundBrush}">

  <Panel>
    <views:MainView />
    <splash:SplashOverlay AppName="HandwerkerImperium"
                          IconSource="avares://HandwerkerImperium.Shared/Assets/icon.png" />
  </Panel>

</Window>
