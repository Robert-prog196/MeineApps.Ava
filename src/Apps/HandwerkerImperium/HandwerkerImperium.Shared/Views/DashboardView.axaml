<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerImperium.ViewModels"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:models="using:HandwerkerImperium.Models"
             x:Class="HandwerkerImperium.Views.DashboardView"
             x:DataType="vm:MainViewModel">

  <Grid RowDefinitions="Auto,*">

    <!-- ================================================================= -->
    <!-- HEADER                                                            -->
    <!-- ================================================================= -->
    <Border Grid.Row="0"
            Classes="CardElevated"
            Padding="16,12"
            CornerRadius="0,0,12,12">
      <Grid ColumnDefinitions="*,Auto">

        <!-- Money & Income -->
        <StackPanel Spacing="4">
          <TextBlock Text="{Binding MoneyDisplay}"
                     FontSize="32" FontWeight="Bold"
                     Foreground="{DynamicResource SuccessBrush}" />
          <TextBlock Text="{Binding IncomeDisplay}"
                     FontSize="12"
                     Foreground="{DynamicResource TextSecondaryBrush}" />
        </StackPanel>

        <!-- Header-Icons + Level & XP -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">

          <!-- Stats Button -->
          <Button Classes="Text" Padding="6"
                  Command="{Binding SelectStatisticsTabCommand}">
            <mi:MaterialIcon Kind="ChartBar" Width="22" Height="22"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
          </Button>

          <!-- Achievements Button -->
          <Button Classes="Text" Padding="6"
                  Command="{Binding SelectAchievementsTabCommand}">
            <mi:MaterialIcon Kind="Trophy" Width="22" Height="22"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
          </Button>

          <!-- Daily Reward Badge -->
          <Button Classes="Primary"
                  Padding="8,4"
                  IsVisible="{Binding HasDailyReward}"
                  Command="{Binding ClaimDailyRewardCommand}">
            <mi:MaterialIcon Kind="Gift" Width="20" Height="20" />
          </Button>

          <StackPanel Spacing="4">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <mi:MaterialIcon Kind="Star" Width="20" Height="20"
                               Foreground="Gold" />
              <TextBlock Text="{Binding PlayerLevel, StringFormat='Level {0}'}"
                         FontSize="14" FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
            </StackPanel>
            <ProgressBar Value="{Binding LevelProgress}"
                         Maximum="1"
                         Foreground="{DynamicResource PrimaryBrush}"
                         Height="6" Width="100" />
          </StackPanel>
        </StackPanel>

      </Grid>
    </Border>

    <!-- ================================================================= -->
    <!-- MAIN CONTENT                                                      -->
    <!-- ================================================================= -->
    <ScrollViewer Grid.Row="1" Padding="16">
      <StackPanel Spacing="20">

        <!-- DAILY CHALLENGES -->
        <Border Classes="CardElevated" Padding="12" IsVisible="{Binding HasDailyChallenges}">
          <StackPanel Spacing="8">
            <!-- Header -->
            <Grid ColumnDefinitions="Auto,*,Auto">
              <mi:MaterialIcon Kind="CalendarCheck" Width="20" Height="20"
                               Foreground="{DynamicResource PrimaryBrush}" />
              <TextBlock Grid.Column="1" Text="{loc:Translate DailyChallenges}"
                         FontSize="16" FontWeight="Bold" Margin="8,0,0,0"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
              <Button Grid.Column="2" Classes="Text" Padding="4"
                      Command="{Binding ToggleChallengesExpandedCommand}">
                <mi:MaterialIcon Kind="{Binding ChallengesExpandIconKind}" Width="20" Height="20" />
              </Button>
            </Grid>
            <!-- Challenge List -->
            <ItemsControl ItemsSource="{Binding DailyChallenges}"
                          IsVisible="{Binding IsChallengesExpanded}">
              <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:DailyChallenge">
                  <Border Margin="0,4" Padding="8" CornerRadius="8"
                          Background="{DynamicResource SurfaceBrush}">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="4">
                      <TextBlock Text="{Binding DisplayDescription}" FontSize="12"
                                 Foreground="{DynamicResource TextPrimaryBrush}" />
                      <TextBlock Grid.Column="1" Text="{Binding RewardDisplay}" FontSize="12"
                                 Foreground="{DynamicResource SuccessBrush}" />
                      <Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto" ColumnSpacing="8">
                        <ProgressBar Value="{Binding Progress}" Maximum="1" Height="6"
                                     Foreground="{DynamicResource PrimaryBrush}" />
                        <TextBlock Grid.Column="1" Text="{Binding ProgressText}" FontSize="10"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" />
                      </Grid>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
            <!-- All-Complete Bonus -->
            <Button Classes="Secondary" HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    IsVisible="{Binding CanClaimAllBonus}"
                    Command="{Binding ClaimAllChallengesBonusCommand}">
              <StackPanel Orientation="Horizontal" Spacing="8">
                <mi:MaterialIcon Kind="Gift" Width="16" Height="16" />
                <TextBlock Text="{loc:Translate AllChallengesBonus}" FontSize="13" />
              </StackPanel>
            </Button>
          </StackPanel>
        </Border>

        <!-- QUICK JOBS -->
        <Grid ColumnDefinitions="*,Auto" Margin="0,8,0,0">
          <TextBlock Text="{loc:Translate QuickJobs}" FontSize="18" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}" />
          <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="TimerRefresh" Width="14" Height="14"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="{Binding QuickJobTimerDisplay}" FontSize="12"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Grid>

        <ItemsControl ItemsSource="{Binding QuickJobs}">
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="models:QuickJob">
              <Border Classes="Card" Margin="0,4" Padding="12">
                <Grid ColumnDefinitions="*,Auto">
                  <StackPanel Spacing="2">
                    <TextBlock Text="{Binding DisplayTitle}" FontSize="13" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                      <TextBlock Text="{Binding DisplayWorkshopName}" FontSize="11"
                                 Foreground="{DynamicResource TextSecondaryBrush}" />
                      <TextBlock Text="{Binding RewardDisplay}" FontSize="11"
                                 Foreground="{DynamicResource SuccessBrush}" />
                    </StackPanel>
                  </StackPanel>
                  <Button Grid.Column="1" Classes="Primary" Padding="12,6"
                          Content="{loc:Translate Start}"
                          IsVisible="{Binding !IsCompleted}"
                          Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).StartQuickJobCommand}"
                          CommandParameter="{Binding .}" />
                  <mi:MaterialIcon Grid.Column="1" Kind="Check" Width="20" Height="20"
                                   Foreground="{DynamicResource SuccessBrush}"
                                   IsVisible="{Binding IsCompleted}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- WORKSHOPS SECTION -->
        <TextBlock Text="{loc:Translate Home}"
                   FontSize="20" FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}" />

        <!-- Workshop Cards Grid -->
        <WrapPanel Orientation="Horizontal"
                   HorizontalAlignment="Center">
          <ItemsControl ItemsSource="{Binding Workshops}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <WrapPanel Orientation="Horizontal"
                           HorizontalAlignment="Center" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate x:DataType="vm:WorkshopDisplayModel">
                <Button Classes="Text"
                        Margin="4,8"
                        Padding="0"
                        Height="NaN"
                        Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).SelectWorkshopCommand}"
                        CommandParameter="{Binding .}">
                  <Border Classes="Card" Padding="10" Width="130" MinHeight="150"
                          BoxShadow="0 2 8 0 #30000000">
                    <StackPanel Spacing="8" Width="110">

                      <!-- Icon & Lock -->
                      <Grid Width="56" Height="56" HorizontalAlignment="Center">
                        <Border CornerRadius="28">
                          <Border.Background>
                            <RadialGradientBrush>
                              <GradientStop Color="#33686CF0" Offset="0" />
                              <GradientStop Color="#11686CF0" Offset="1" />
                            </RadialGradientBrush>
                          </Border.Background>
                        </Border>
                        <mi:MaterialIcon Kind="{Binding IconKind}"
                                         Width="28" Height="28"
                                         Foreground="{DynamicResource PrimaryBrush}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         IsVisible="{Binding IsUnlocked}" />
                        <mi:MaterialIcon Kind="Lock"
                                         Width="24" Height="24"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         IsVisible="{Binding IsUnlocked, Converter={x:Static BoolConverters.Not}}" />
                      </Grid>

                      <!-- Name -->
                      <TextBlock Text="{Binding Name}"
                                 FontSize="12"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"
                                 TextTrimming="CharacterEllipsis"
                                 MaxLines="1" />

                      <!-- Level Progress -->
                      <ProgressBar Value="{Binding LevelProgress}"
                                   Maximum="1"
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   Height="4"
                                   IsVisible="{Binding IsUnlocked}" />

                      <!-- Workers & Income (if unlocked) -->
                      <StackPanel Spacing="2" IsVisible="{Binding IsUnlocked}">
                        <TextBlock Text="{Binding WorkerDisplay}"
                                   FontSize="11"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Text="{Binding IncomeDisplay}"
                                   FontSize="11"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SuccessBrush}" />
                      </StackPanel>

                      <!-- Unlock info (if locked) -->
                      <TextBlock Text="{Binding UnlockLevel, StringFormat='Lvl {0}'}"
                                 FontSize="10"
                                 HorizontalAlignment="Center"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 IsVisible="{Binding !IsUnlocked}" />

                      <!-- Upgrade Button -->
                      <Button Classes="Primary"
                              Padding="8,4"
                              MinHeight="36"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Center"
                              IsVisible="{Binding IsUnlocked}"
                              IsEnabled="{Binding CanAffordUpgrade}"
                              Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).UpgradeWorkshopCommand}"
                              CommandParameter="{Binding .}">
                        <mi:MaterialIcon Kind="ChevronUp" Width="18" Height="18" />
                      </Button>

                    </StackPanel>
                  </Border>
                </Button>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </WrapPanel>

        <!-- ORDERS SECTION -->
        <Grid ColumnDefinitions="*,Auto" Margin="0,16,0,0">
          <TextBlock Text="{loc:Translate Orders}"
                     FontSize="20" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}" />
          <Button Grid.Column="1" Classes="Text"
                  Command="{Binding RefreshOrdersCommand}">
            <mi:MaterialIcon Kind="Refresh" Width="24" Height="24" />
          </Button>
        </Grid>

        <!-- Order Cards -->
        <ItemsControl ItemsSource="{Binding AvailableOrders}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Classes="Card" Margin="0,0,0,12" Padding="16">
                <Grid ColumnDefinitions="*,Auto"
                      RowDefinitions="Auto,Auto,Auto">

                  <!-- Title & Difficulty -->
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="{Binding DisplayTitle}"
                               FontSize="14" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                  </StackPanel>

                  <!-- Workshop Type Name (localized) -->
                  <TextBlock Grid.Column="1"
                             Text="{Binding DisplayWorkshopName}"
                             FontSize="12"
                             Foreground="{DynamicResource PrimaryBrush}"
                             VerticalAlignment="Center" />

                  <!-- Tasks Preview -->
                  <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                             Text="{Binding Tasks.Count, StringFormat='{}{0} Mini-Games'}"
                             FontSize="12"
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             Margin="0,4,0,8" />

                  <!-- Reward & Start Button -->
                  <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4">
                    <mi:MaterialIcon Kind="CashMultiple" Width="18" Height="18"
                                     Foreground="{DynamicResource SuccessBrush}" />
                    <TextBlock Text="{Binding BaseReward, StringFormat='{}{0:N0}'}"
                               FontSize="14" FontWeight="Bold"
                               Foreground="{DynamicResource SuccessBrush}"
                               VerticalAlignment="Center" />
                    <mi:MaterialIcon Kind="Star" Width="14" Height="14"
                                     Foreground="Gold"
                                     Margin="8,0,0,0" />
                    <TextBlock Text="{Binding BaseXp, StringFormat='{}{0} XP'}"
                               FontSize="12"
                               Foreground="Gold"
                               VerticalAlignment="Center" />
                  </StackPanel>

                  <Button Grid.Row="2" Grid.Column="1"
                          Content="{loc:Translate Start}"
                          Classes="Primary"
                          Padding="16,8"
                          Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).StartOrderCommand}"
                          CommandParameter="{Binding .}"
                          IsEnabled="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).HasActiveOrder, Converter={x:Static BoolConverters.Not}}" />

                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Bottom Spacer -->
        <Border Height="20" />

      </StackPanel>
    </ScrollViewer>

  </Grid>

</UserControl>
