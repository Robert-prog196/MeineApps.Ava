<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerImperium.ViewModels"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:models="using:HandwerkerImperium.Models"
             xmlns:conv="using:HandwerkerImperium.Converters"
             xmlns:controls="using:MeineApps.UI.Controls"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="HandwerkerImperium.Views.DashboardView"
             x:DataType="vm:MainViewModel">

  <UserControl.Resources>
    <conv:WorkshopColorConverter x:Key="WorkshopColor" />
    <conv:GreaterThanZeroConverter x:Key="GreaterThanZero" />
  </UserControl.Resources>

  <!-- Animationen -->
  <UserControl.Styles>
    <!-- Income-Puls -->
    <Style Selector="TextBlock.IncomePulse">
      <Style.Animations>
        <Animation Duration="0:0:2" IterationCount="Infinite">
          <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.6"/></KeyFrame>
          <KeyFrame Cue="50%"><Setter Property="Opacity" Value="1.0"/></KeyFrame>
          <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.6"/></KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
    <!-- Goldschrauben-Badge Glow -->
    <Style Selector="Border.GoldenBadge">
      <Style.Animations>
        <Animation Duration="0:0:3" IterationCount="Infinite">
          <KeyFrame Cue="0%"><Setter Property="BoxShadow" Value="0 0 4 0 #20FFD700"/></KeyFrame>
          <KeyFrame Cue="50%"><Setter Property="BoxShadow" Value="0 0 14 0 #60FFD700"/></KeyFrame>
          <KeyFrame Cue="100%"><Setter Property="BoxShadow" Value="0 0 4 0 #20FFD700"/></KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
    <!-- Onboarding: Pulsierender Hint-Rahmen -->
    <Style Selector="Border.TutorialHint">
      <Style.Animations>
        <Animation Duration="0:0:2" IterationCount="Infinite">
          <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.4"/></KeyFrame>
          <KeyFrame Cue="50%"><Setter Property="Opacity" Value="1.0"/></KeyFrame>
          <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.4"/></KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
    <!-- Phase 12.2: "Fast geschafft" Puls auf Upgrade-Button -->
    <Style Selector="Button.UpgradePulse">
      <Style.Animations>
        <Animation Duration="0:0:1.5" IterationCount="Infinite">
          <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.7"/></KeyFrame>
          <KeyFrame Cue="50%"><Setter Property="Opacity" Value="1.0"/></KeyFrame>
          <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.7"/></KeyFrame>
        </Animation>
      </Style.Animations>
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="Auto,*">

    <!-- ================================================================= -->
    <!-- HEADER: Handwerker-Gradient + Parallax                            -->
    <!-- ================================================================= -->
    <Border Grid.Row="0" CornerRadius="0,0,12,12"
            BoxShadow="0 4 16 0 #40D97706"
            Name="HeaderBorder"
            ClipToBounds="True">
      <Panel>
        <!-- City-Skyline SkiaSharp Layer (unterste Schicht) -->
        <skia:SKCanvasView x:Name="CityCanvas" MinHeight="140" />

        <!-- Gradient-Overlay (semi-transparent, damit City durchscheint) -->
        <Border Padding="16,12">
          <Border.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#B0D97706" Offset="0" />
              <GradientStop Color="#A092400E" Offset="0.7" />
              <GradientStop Color="{DynamicResource SurfaceColor}" Offset="1" />
            </LinearGradientBrush>
          </Border.Background>
          <StackPanel Spacing="6">

            <!-- Zeile 1: Geld + Goldschrauben + Daily Reward -->
            <Grid ColumnDefinitions="*,Auto">
              <StackPanel Spacing="2">
                <TextBlock x:Name="MoneyText" Text="{Binding MoneyDisplay}"
                           FontSize="32" FontWeight="Bold"
                           Foreground="White" />
                <TextBlock Text="{Binding IncomeDisplay}"
                           FontSize="13" Classes="IncomePulse"
                           Foreground="#FFFFFFCC" />
              </StackPanel>

              <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8"
                          VerticalAlignment="Center">
                <!-- MasterTools Badge (antippbar für Info) -->
                <Button Command="{Binding ShowMasterToolsInfoCommand}"
                        Background="#30000000" CornerRadius="12" Padding="8,4"
                        BorderThickness="0" Cursor="Hand"
                        IsVisible="{Binding MasterToolsCollected, Converter={StaticResource GreaterThanZero}}">
                  <StackPanel Orientation="Horizontal" Spacing="4">
                    <mi:MaterialIcon Kind="Wrench" Width="14" Height="14" Foreground="#F59E0B" />
                    <TextBlock FontSize="12" FontWeight="Bold" Foreground="#F59E0B">
                      <Run Text="{Binding MasterToolsCollected}" />/<Run Text="{Binding MasterToolsTotal}" />
                    </TextBlock>
                  </StackPanel>
                </Button>
                <!-- Goldschrauben-Badge mit Glow -->
                <Border Classes="GoldenBadge"
                        Background="#30000000" CornerRadius="12" Padding="8,4">
                  <StackPanel Orientation="Horizontal" Spacing="4">
                    <mi:MaterialIcon Kind="ScrewFlatTop" Width="16" Height="16" Foreground="#FFD700" />
                    <TextBlock Text="{Binding GoldenScrewsDisplay}" FontSize="14" FontWeight="Bold"
                               Foreground="#FFD700" />
                  </StackPanel>
                </Border>

                <!-- Daily Reward Badge -->
                <Button Classes="Primary"
                        Padding="8,4"
                        Background="#FFFFFF30"
                        IsVisible="{Binding HasDailyReward}"
                        Command="{Binding ClaimDailyRewardCommand}">
                  <mi:MaterialIcon Kind="Gift" Width="20" Height="20" Foreground="#3D1C00" />
                </Button>
              </StackPanel>
            </Grid>

            <!-- Zeile 2: Level + XP (volle Breite) + Stats + Achievements -->
            <Grid ColumnDefinitions="Auto,*,Auto">
              <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                <mi:MaterialIcon Kind="Star" Width="14" Height="14" Foreground="#FFD700" />
                <TextBlock Text="{Binding PlayerLevel, StringFormat='Lv.{0}'}"
                           FontSize="12" FontWeight="Bold"
                           Foreground="White" />
              </StackPanel>

              <!-- XP-Leiste: volle Breite, prominent, animiert -->
              <ProgressBar Grid.Column="1" Value="{Binding LevelProgress}"
                           Maximum="1" Height="8" CornerRadius="4"
                           Foreground="#F59E0B" Background="#FFFFFF20"
                           VerticalAlignment="Center" Margin="8,0">
                <ProgressBar.Transitions>
                  <Transitions>
                    <DoubleTransition Property="Value" Duration="0:0:0.3" Easing="CubicEaseOut" />
                  </Transitions>
                </ProgressBar.Transitions>
              </ProgressBar>

              <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                <!-- Streak-Feuer (sichtbar ab Streak >= 2) -->
                <StackPanel Orientation="Horizontal" Spacing="2"
                            IsVisible="{Binding HasLoginStreak}">
                  <mi:MaterialIcon Kind="Fire" Width="14" Height="14" Foreground="#FF6B35" />
                  <TextBlock Text="{Binding LoginStreak}" FontSize="11" FontWeight="Bold"
                             Foreground="#FF6B35" VerticalAlignment="Center" />
                </StackPanel>
                <Button Classes="Text" Padding="4"
                        Command="{Binding SelectStatisticsTabCommand}">
                  <mi:MaterialIcon Kind="ChartBar" Width="18" Height="18"
                                   Foreground="#FFFFFFAA" />
                </Button>
                <Button Classes="Text" Padding="4"
                        Command="{Binding SelectAchievementsTabCommand}">
                  <mi:MaterialIcon Kind="Trophy" Width="18" Height="18"
                                   Foreground="#FFFFFFAA" />
                </Button>
              </StackPanel>
            </Grid>

          </StackPanel>
        </Border>
      </Panel>
    </Border>

    <!-- ================================================================= -->
    <!-- MAIN CONTENT                                                      -->
    <!-- ================================================================= -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                  Name="DashboardScrollViewer">
      <StackPanel Spacing="20" Margin="16">

        <!-- ============================================================= -->
        <!-- RUSH BANNER                                                   -->
        <!-- ============================================================= -->
        <Border IsVisible="{Binding CanActivateRush}"
                CornerRadius="12" Padding="12,8"
                Margin="0,0,0,4">
          <Border.Background>
            <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
              <GradientStop Color="#D97706" Offset="0" />
              <GradientStop Color="#FFD700" Offset="1" />
            </LinearGradientBrush>
          </Border.Background>
          <Grid ColumnDefinitions="Auto,*,Auto">
            <TextBlock Text="⚡" FontSize="20" VerticalAlignment="Center" />
            <TextBlock Grid.Column="1" Text="{Binding RushButtonText}"
                       FontSize="14" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" Margin="8,0" />
            <Button Grid.Column="2" Classes="Text" Padding="10,4"
                    Background="#00000025" CornerRadius="8"
                    Command="{Binding ActivateRushCommand}">
              <TextBlock Text="GO!" FontSize="13" FontWeight="Bold" Foreground="#3D1C00" />
            </Button>
          </Grid>
        </Border>

        <!-- Aktiver Rush-Indikator -->
        <Border IsVisible="{Binding IsRushActive}"
                Background="#20FFD700" BorderBrush="#FFD700" BorderThickness="1"
                CornerRadius="10" Padding="10,6" Margin="0,0,0,4">
          <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
            <TextBlock Text="⚡" FontSize="16" />
            <TextBlock Text="2x RUSH AKTIV" FontSize="13" FontWeight="Bold" Foreground="#FFD700" />
            <TextBlock Text="{Binding RushTimeRemaining}" FontSize="13" Foreground="#FFD700CC" />
          </StackPanel>
        </Border>

        <!-- ============================================================= -->
        <!-- EVENT BANNER                                                  -->
        <!-- ============================================================= -->
        <Border IsVisible="{Binding HasActiveEvent}"
                Background="#20D97706" BorderBrush="{StaticResource CraftPrimaryBrush}"
                BorderThickness="1" CornerRadius="10" Padding="10,8"
                Margin="0,0,0,4">
          <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
            <TextBlock Text="{Binding ActiveEventIcon}" FontSize="20" VerticalAlignment="Center" />
            <StackPanel Grid.Column="1" Spacing="2">
              <TextBlock Text="{Binding ActiveEventName}" FontSize="13" FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
              <TextBlock Text="{Binding ActiveEventDescription}" FontSize="11"
                         Foreground="{DynamicResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis" />
            </StackPanel>
            <StackPanel Grid.Column="2" Spacing="2" VerticalAlignment="Center">
              <TextBlock Text="{Binding ActiveEventTimeRemaining}" FontSize="11"
                         Foreground="{StaticResource CraftPrimaryLightBrush}" HorizontalAlignment="Right" />
              <TextBlock Text="{Binding SeasonalModifierText}" FontSize="10"
                         Foreground="{DynamicResource SuccessBrush}" HorizontalAlignment="Right" />
            </StackPanel>
          </Grid>
        </Border>

        <!-- ============================================================= -->
        <!-- LIEFERANT BANNER                                              -->
        <!-- ============================================================= -->
        <Border IsVisible="{Binding HasPendingDelivery}"
                CornerRadius="10" Padding="10,8" Margin="0,0,0,4">
          <Border.Background>
            <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
              <GradientStop Color="#065F46" Offset="0" />
              <GradientStop Color="#10B981" Offset="1" />
            </LinearGradientBrush>
          </Border.Background>
          <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
            <TextBlock Text="{Binding DeliveryIcon}" FontSize="20" VerticalAlignment="Center" />
            <StackPanel Grid.Column="1" Spacing="2">
              <TextBlock Text="{Binding DeliveryDescription}" FontSize="13" FontWeight="Bold"
                         Foreground="White" />
              <TextBlock Text="{Binding DeliveryAmountText}" FontSize="11" Foreground="#FFFFFFCC" />
            </StackPanel>
            <Button Grid.Column="2" Classes="Text" Padding="10,4"
                    Background="#00000020" CornerRadius="8"
                    Command="{Binding ClaimDeliveryCommand}">
              <mi:MaterialIcon Kind="PackageDown" Width="20" Height="20" Foreground="#1B3D2C" />
            </Button>
          </Grid>
        </Border>

        <!-- ============================================================= -->
        <!-- DAILY CHALLENGES                                              -->
        <!-- ============================================================= -->
        <Border Classes="CardElevated" Padding="12" IsVisible="{Binding HasDailyChallenges}">
          <StackPanel Spacing="8">
            <Grid ColumnDefinitions="Auto,*,Auto">
              <mi:MaterialIcon Kind="CalendarCheck" Width="20" Height="20"
                               Foreground="{StaticResource CraftPrimaryBrush}" />
              <TextBlock Grid.Column="1" Text="{loc:Translate DailyChallenges}"
                         FontSize="16" FontWeight="Bold" Margin="8,0,0,0"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
              <Button Grid.Column="2" Classes="Text" Padding="4"
                      Command="{Binding ToggleChallengesExpandedCommand}">
                <mi:MaterialIcon Kind="{Binding ChallengesExpandIconKind}" Width="20" Height="20" />
              </Button>
            </Grid>
            <ItemsControl ItemsSource="{Binding DailyChallenges}"
                          IsVisible="{Binding IsChallengesExpanded}">
              <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:DailyChallenge">
                  <Border Margin="0,4" Padding="8" CornerRadius="8"
                          Background="{DynamicResource SurfaceBrush}">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="4">
                      <TextBlock Text="{Binding DisplayDescription}" FontSize="12"
                                 Foreground="{DynamicResource TextPrimaryBrush}" />
                      <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="{Binding RewardDisplay}" FontSize="12"
                                   Foreground="{DynamicResource SuccessBrush}"
                                   VerticalAlignment="Center" />
                        <!-- Retry per Video-Ad (nur wenn nicht geschafft, noch nicht genutzt, Fortschritt > 0) -->
                        <Button Classes="Text" Padding="2"
                                IsVisible="{Binding CanRetryWithAd}"
                                Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).RetryChallengeWithAdCommand}"
                                CommandParameter="{Binding .}">
                          <mi:MaterialIcon Kind="Video" Width="16" Height="16"
                                           Foreground="{StaticResource CraftPrimaryLightBrush}" />
                        </Button>
                      </StackPanel>
                      <Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto" ColumnSpacing="8">
                        <ProgressBar Value="{Binding Progress}" Maximum="1" Height="6"
                                     Foreground="{StaticResource CraftPrimaryLightBrush}" />
                        <TextBlock Grid.Column="1" Text="{Binding ProgressText}" FontSize="10"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" />
                      </Grid>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Classes="Secondary" HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    IsVisible="{Binding CanClaimAllBonus}"
                    Command="{Binding ClaimAllChallengesBonusCommand}">
              <StackPanel Orientation="Horizontal" Spacing="8">
                <mi:MaterialIcon Kind="Gift" Width="16" Height="16" />
                <TextBlock Text="{loc:Translate AllChallengesBonus}" FontSize="13" />
              </StackPanel>
            </Button>
          </StackPanel>
        </Border>

        <!-- ============================================================= -->
        <!-- QUICK JOBS                                                    -->
        <!-- ============================================================= -->
        <Border Classes="CardElevated" Padding="12">
          <StackPanel Spacing="8">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
              <mi:MaterialIcon Kind="FlashOutline" Width="20" Height="20"
                               Foreground="{StaticResource CraftPrimaryLightBrush}" />
              <TextBlock Grid.Column="1" Text="{loc:Translate QuickJobs}"
                         FontSize="16" FontWeight="Bold" Margin="8,0,0,0"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
              <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4"
                          VerticalAlignment="Center" Margin="0,0,8,0">
                <mi:MaterialIcon Kind="TimerRefresh" Width="14" Height="14"
                                 Foreground="{DynamicResource TextSecondaryBrush}" />
                <TextBlock Text="{Binding QuickJobTimerDisplay}" FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" />
              </StackPanel>
              <Button Grid.Column="3" Classes="Text" Padding="4"
                      Command="{Binding ToggleQuickJobsExpandedCommand}">
                <mi:MaterialIcon Kind="{Binding QuickJobsExpandIconKind}" Width="20" Height="20" />
              </Button>
            </Grid>
            <ItemsControl ItemsSource="{Binding QuickJobs}"
                          IsVisible="{Binding IsQuickJobsExpanded}">
              <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:QuickJob">
                  <Border Margin="0,4" Padding="8" CornerRadius="8"
                          Background="{DynamicResource SurfaceBrush}">
                    <Grid ColumnDefinitions="*,Auto">
                      <StackPanel Spacing="2">
                        <TextBlock Text="{Binding DisplayTitle}" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                          <TextBlock Text="{Binding DisplayWorkshopName}" FontSize="11"
                                     Foreground="{DynamicResource TextSecondaryBrush}" />
                          <TextBlock Text="{Binding RewardDisplay}" FontSize="11"
                                     Foreground="{DynamicResource SuccessBrush}" />
                        </StackPanel>
                      </StackPanel>
                      <Button Grid.Column="1" Classes="Primary" Padding="10,4"
                              Background="{StaticResource CraftPrimaryBrush}"
                              Content="{loc:Translate Start}"
                              IsVisible="{Binding !IsCompleted}"
                              Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).StartQuickJobCommand}"
                              CommandParameter="{Binding .}" />
                      <mi:MaterialIcon Grid.Column="1" Kind="Check" Width="20" Height="20"
                                       Foreground="{DynamicResource SuccessBrush}"
                                       IsVisible="{Binding IsCompleted}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </Border>

        <!-- ============================================================= -->
        <!-- WORKSHOPS SECTION: Farbige Karten mit Workshop-Identitaet     -->
        <!-- ============================================================= -->
        <Grid ColumnDefinitions="*,Auto">
          <TextBlock Text="{loc:Translate Workshops}"
                     FontSize="18" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     VerticalAlignment="Center" />
          <!-- BulkBuy-Toggle -->
          <Button Grid.Column="1" Classes="Text" Padding="8,4" CornerRadius="12"
                  Background="{StaticResource CraftPrimaryBrush}"
                  Command="{Binding CycleBulkBuyCommand}">
            <TextBlock Text="{Binding BulkBuyLabel}" FontSize="12" FontWeight="Bold"
                       Foreground="White" />
          </Button>
        </Grid>

        <!-- Onboarding-Hint: Pulsierender Hinweis fuer neue Spieler -->
        <Border Classes="TutorialHint"
                IsVisible="{Binding ShowTutorialHint}"
                Background="#20FFD700"
                BorderBrush="#FFD700"
                BorderThickness="1.5"
                CornerRadius="10"
                Padding="10,6"
                Margin="0,0,0,4">
          <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
            <mi:MaterialIcon Kind="ArrowDownBold" Width="16" Height="16" Foreground="#FFD700" />
            <TextBlock Text="{loc:Translate TutorialUpgradeHint}"
                       FontSize="13" FontWeight="SemiBold"
                       Foreground="#FFD700" />
            <mi:MaterialIcon Kind="ArrowDownBold" Width="16" Height="16" Foreground="#FFD700" />
          </StackPanel>
        </Border>

        <ItemsControl ItemsSource="{Binding Workshops}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <UniformGrid Columns="2" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:WorkshopDisplayModel">
              <Button Classes="Text" Margin="4" Padding="0" Height="NaN"
                      HorizontalAlignment="Stretch" VerticalAlignment="Top"
                      HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                      Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).SelectWorkshopCommand}"
                      CommandParameter="{Binding .}">
                <Border CornerRadius="16" ClipToBounds="True"
                        Background="{DynamicResource CardBrush}"
                        BoxShadow="{Binding GlowShadow}"
                        Classes.WorkshopCard="True"
                        Classes.CanAfford="{Binding CanAffordUpgrade}"
                        HorizontalAlignment="Stretch">
                  <Border.Transitions>
                    <Transitions>
                      <DoubleTransition Property="Opacity" Duration="0:0:0.3" />
                    </Transitions>
                  </Border.Transitions>
                  <!-- Kein * Row mehr - alles Auto, damit nichts abgeschnitten wird -->
                  <Grid RowDefinitions="Auto,Auto,Auto">

                    <!-- Row 0: Kompakter Header mit Icon + Name + Level -->
                    <Panel Grid.Row="0">
                      <Border Background="{Binding Type, Converter={StaticResource WorkshopColor}}"
                              Opacity="{Binding ColorIntensity}" />
                      <Grid Margin="8,8,8,6" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="6">
                        <!-- Icon -->
                        <Grid Width="28" Height="28">
                          <Border CornerRadius="7"
                                  Background="{Binding Type, Converter={StaticResource WorkshopColor}, ConverterParameter=bg}" />
                          <mi:MaterialIcon Kind="{Binding IconKind}" Width="14" Height="14"
                                           Foreground="{Binding Type, Converter={StaticResource WorkshopColor}}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           IsVisible="{Binding IsUnlocked}" />
                          <!-- Gesperrt + nicht freischaltbar: Graues Schloss -->
                          <mi:MaterialIcon Kind="Lock" Width="14" Height="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center">
                            <mi:MaterialIcon.IsVisible>
                              <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="!IsUnlocked" />
                                <Binding Path="!CanBuyUnlock" />
                              </MultiBinding>
                            </mi:MaterialIcon.IsVisible>
                          </mi:MaterialIcon>
                          <!-- Gesperrt + freischaltbar: Workshop-farbiges offenes Schloss -->
                          <mi:MaterialIcon Kind="LockOpenVariant" Width="14" Height="14"
                                           Foreground="{Binding Type, Converter={StaticResource WorkshopColor}}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center">
                            <mi:MaterialIcon.IsVisible>
                              <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="!IsUnlocked" />
                                <Binding Path="CanBuyUnlock" />
                              </MultiBinding>
                            </mi:MaterialIcon.IsVisible>
                          </mi:MaterialIcon>
                        </Grid>
                        <!-- Name -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Name}"
                                   FontSize="12" FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center" />
                        <!-- Level Badge -->
                        <Border Grid.Column="2" CornerRadius="6" Background="Gold" Padding="4,2"
                                IsVisible="{Binding IsUnlocked}"
                                VerticalAlignment="Center">
                          <TextBlock Text="{Binding Level, StringFormat='Lv.{0}'}"
                                     FontSize="9" FontWeight="Bold"
                                     Foreground="#3D2B00" />
                        </Border>
                      </Grid>
                    </Panel>

                    <!-- Row 1: Body -->
                    <StackPanel Grid.Row="1" Margin="8,4,8,6" Spacing="4">

                      <!-- Freigeschaltet: Workers + Income + Progress -->
                      <Grid ColumnDefinitions="*,Auto"
                            IsVisible="{Binding IsUnlocked}">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                          <mi:MaterialIcon Kind="AccountHardHat" Width="13" Height="13"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                          <TextBlock FontSize="11"
                                     Foreground="{DynamicResource TextSecondaryBrush}">
                            <Run Text="{Binding WorkerCount}" />/<Run Text="{Binding MaxWorkers}" />
                          </TextBlock>
                        </StackPanel>
                        <TextBlock Grid.Column="1" Text="{Binding IncomeDisplay}" FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SuccessBrush}"
                                   TextTrimming="CharacterEllipsis" />
                      </Grid>

                      <!-- Animierte Level-ProgressBar -->
                      <ProgressBar Value="{Binding LevelProgress}" Maximum="1"
                                   Foreground="{Binding Type, Converter={StaticResource WorkshopColor}}"
                                   Height="4"
                                   IsVisible="{Binding IsUnlocked}">
                        <ProgressBar.Transitions>
                          <Transitions>
                            <DoubleTransition Property="Value" Duration="0:0:0.3" Easing="CubicEaseOut" />
                          </Transitions>
                        </ProgressBar.Transitions>
                      </ProgressBar>

                      <!-- Milestone-Fortschritt -->
                      <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding ShowMilestone}" Margin="0,2,0,0">
                        <ProgressBar Value="{Binding MilestoneProgress}" Maximum="1"
                                     Foreground="Gold" Height="3" Opacity="0.6">
                          <ProgressBar.Transitions>
                            <Transitions>
                              <DoubleTransition Property="Value" Duration="0:0:0.3" Easing="CubicEaseOut" />
                            </Transitions>
                          </ProgressBar.Transitions>
                        </ProgressBar>
                        <TextBlock Grid.Column="1" Text="{Binding MilestoneDisplay}"
                                   FontSize="8" Foreground="Gold" Margin="4,0,0,0"
                                   VerticalAlignment="Center" />
                      </Grid>

                      <!-- Gesperrt: Unlock-Info mit Level + Kosten -->
                      <StackPanel IsVisible="{Binding !IsUnlocked}" Spacing="2" MinHeight="40">
                        <!-- Nicht freischaltbar: Nur Level-Anforderung + Schloss -->
                        <TextBlock Text="{Binding UnlockDisplay}"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   IsVisible="{Binding !CanBuyUnlock}" />
                        <mi:MaterialIcon Kind="LockOutline" Width="20" Height="20"
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         Opacity="0.3"
                                         HorizontalAlignment="Center"
                                         IsVisible="{Binding !CanBuyUnlock}" />

                        <!-- Freischaltbar: Prominente Anzeige mit Kosten + offenes Schloss -->
                        <StackPanel IsVisible="{Binding CanBuyUnlock}" Spacing="4"
                                    HorizontalAlignment="Center">
                          <mi:MaterialIcon Kind="LockOpenVariant" Width="24" Height="24"
                                           Foreground="{StaticResource CraftPrimaryBrush}"
                                           HorizontalAlignment="Center" />
                          <TextBlock Text="{Binding UnlockCostDisplay}"
                                     FontSize="13" FontWeight="Bold"
                                     Foreground="{StaticResource CraftPrimaryBrush}"
                                     HorizontalAlignment="Center" />
                          <TextBlock Text="{loc:Translate TapToUnlock}"
                                     FontSize="9"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     HorizontalAlignment="Center" />
                        </StackPanel>
                      </StackPanel>

                    </StackPanel>

                    <!-- Row 2: Upgrade-Button (volle Breite, abgerundete untere Ecken) -->
                    <Button Grid.Row="2" Classes="Primary UpgradeBtn"
                            Padding="0,6" MinHeight="28"
                            CornerRadius="0,0,16,16"
                            Background="{Binding Type, Converter={StaticResource WorkshopColor}}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            IsVisible="{Binding IsUnlocked}"
                            IsEnabled="{Binding CanAffordUpgrade}"
                            Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).UpgradeWorkshopCommand}"
                            CommandParameter="{Binding .}">
                      <StackPanel Orientation="Horizontal" Spacing="4">
                        <mi:MaterialIcon Kind="ChevronUp" Width="14" Height="14" />
                        <TextBlock Text="{Binding UpgradeCostDisplay}" FontSize="12" />
                      </StackPanel>
                    </Button>

                  </Grid>
                </Border>
              </Button>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- ============================================================= -->
        <!-- ORDERS SECTION                                                -->
        <!-- ============================================================= -->
        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,16,0,0">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="{loc:Translate Orders}"
                       FontSize="20" FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            <Border Background="{StaticResource CraftPrimaryBrush}"
                    CornerRadius="10" Padding="8,2"
                    VerticalAlignment="Center">
              <TextBlock Text="{Binding AvailableOrders.Count}"
                         FontSize="12" FontWeight="Bold"
                         Foreground="White" />
            </Border>
          </StackPanel>
          <Button Grid.Column="2" Classes="Text"
                  Command="{Binding RefreshOrdersCommand}">
            <mi:MaterialIcon Kind="Refresh" Width="24" Height="24" />
          </Button>
        </Grid>

        <ItemsControl ItemsSource="{Binding AvailableOrders}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Classes="Card" Margin="0,0,0,12" Padding="16">
                <Grid ColumnDefinitions="*,Auto"
                      RowDefinitions="Auto,Auto,Auto">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="{Binding DisplayTitle}"
                               FontSize="14" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                  </StackPanel>
                  <TextBlock Grid.Column="1"
                             Text="{Binding DisplayWorkshopName}"
                             FontSize="12"
                             Foreground="{StaticResource CraftPrimaryLightBrush}"
                             VerticalAlignment="Center" />
                  <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                             Text="{Binding Tasks.Count, StringFormat='{}{0} Mini-Games'}"
                             FontSize="12"
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             Margin="0,4,0,8" />
                  <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4">
                    <mi:MaterialIcon Kind="CashMultiple" Width="18" Height="18"
                                     Foreground="{DynamicResource SuccessBrush}" />
                    <TextBlock Text="{Binding BaseReward, StringFormat='{}{0:N0}'}"
                               FontSize="14" FontWeight="Bold"
                               Foreground="{DynamicResource SuccessBrush}"
                               VerticalAlignment="Center" />
                    <mi:MaterialIcon Kind="Star" Width="14" Height="14"
                                     Foreground="#FFD700"
                                     Margin="8,0,0,0" />
                    <TextBlock Text="{Binding BaseXp, StringFormat='{}{0} XP'}"
                               FontSize="12"
                               Foreground="#FFD700"
                               VerticalAlignment="Center" />
                  </StackPanel>
                  <Button Grid.Row="2" Grid.Column="1"
                          Content="{loc:Translate Start}"
                          Classes="Primary" Padding="16,8"
                          Background="{StaticResource CraftPrimaryBrush}"
                          Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).StartOrderCommand}"
                          CommandParameter="{Binding .}"
                          IsEnabled="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).HasActiveOrder, Converter={x:Static BoolConverters.Not}}" />
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Bottom Spacer -->
        <Border Height="60" />

      </StackPanel>
    </ScrollViewer>

    <!-- FloatingText Overlay: Animierte "+100€" Texte die nach oben fliegen -->
    <controls:FloatingTextOverlay x:Name="FloatingTextCanvas"
                                   Grid.Row="1" ZIndex="10"
                                   IsHitTestVisible="False" />

  </Grid>

</UserControl>
