<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerRechner.ViewModels.Floor"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="HandwerkerRechner.Views.Floor.ConcreteCalculatorView"
             x:DataType="vm:ConcreteCalculatorViewModel">

  <Grid AutomationProperties.AutomationId="Concrete_RootGrid" RowDefinitions="Auto,*,Auto">

    <!-- Row 0: Header -->
    <Border AutomationProperties.AutomationId="Concrete_Header" Grid.Row="0"
            Background="{DynamicResource WarningBrush}"
            Padding="16,12,16,20"
            CornerRadius="0,0,24,24">
      <Grid ColumnDefinitions="Auto,*">
        <Button AutomationProperties.AutomationId="Concrete_BtnBack" Command="{Binding GoBackCommand}"
                Background="#33FFFFFF"
                CornerRadius="20"
                Width="40" Height="40"
                Padding="0">
          <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
        </Button>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                    Margin="12,0,0,0" VerticalAlignment="Center">
          <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
            <mi:MaterialIcon Kind="Cube" Width="22" Height="22"
                             Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <TextBlock AutomationProperties.AutomationId="Concrete_TxtTitle" Text="{loc:Translate CalcConcrete}"
                     FontSize="20" FontWeight="Bold" Foreground="White"
                     VerticalAlignment="Center" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- Row 1: Scrollable Content -->
    <ScrollViewer AutomationProperties.AutomationId="Concrete_ScrollContent" Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="16" Margin="16,16,16,200">

        <!-- Sub-Rechner Auswahl -->
        <Border AutomationProperties.AutomationId="Concrete_CardShape" Classes="Card StatsCard">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate ConcreteShape}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            <ComboBox AutomationProperties.AutomationId="Concrete_CboShape"
                      ItemsSource="{Binding Calculators}"
                      SelectedIndex="{Binding SelectedCalculator}"
                      HorizontalAlignment="Stretch" />
          </StackPanel>
        </Border>

        <!-- Platte Inputs (Shape 0) -->
        <Border AutomationProperties.AutomationId="Concrete_CardSlab" Classes="Card StatsCard"
                IsVisible="{Binding IsSlabSelected}">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate ConcreteSlab}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate SlabLength}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxSlabLength" Text="{Binding SlabLength}" Watermark="m" Classes="Outlined" />
            </StackPanel>
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate SlabWidth}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxSlabWidth" Text="{Binding SlabWidth}" Watermark="m" Classes="Outlined" />
            </StackPanel>
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate SlabHeight}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxSlabHeight" Text="{Binding SlabHeight}" Watermark="cm" Classes="Outlined" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Fundament Inputs (Shape 1) -->
        <Border AutomationProperties.AutomationId="Concrete_CardStrip" Classes="Card StatsCard"
                IsVisible="{Binding IsStripSelected}">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate StripFoundation}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate StripLength}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxStripLength" Text="{Binding StripLength}" Watermark="m" Classes="Outlined" />
            </StackPanel>
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate StripWidth}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxStripWidth" Text="{Binding StripWidth}" Watermark="cm" Classes="Outlined" />
            </StackPanel>
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate StripDepth}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxStripDepth" Text="{Binding StripDepth}" Watermark="cm" Classes="Outlined" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Säule Inputs (Shape 2) -->
        <Border AutomationProperties.AutomationId="Concrete_CardColumn" Classes="Card StatsCard"
                IsVisible="{Binding IsColumnSelected}">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate ConcreteColumn}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate ColumnDiameter}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxColumnDiameter" Text="{Binding ColumnDiameter}" Watermark="cm" Classes="Outlined" />
            </StackPanel>
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate ColumnHeight}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxColumnHeight" Text="{Binding ColumnHeight}" Watermark="cm" Classes="Outlined" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Sack-Gewicht + Kosten -->
        <Border AutomationProperties.AutomationId="Concrete_CardCost" Classes="Card StatsCard">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate CostCalculation}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate BagWeight}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <ComboBox AutomationProperties.AutomationId="Concrete_CboBagWeight"
                        ItemsSource="{Binding BagWeights}"
                        SelectedItem="{Binding BagWeight}"
                        HorizontalAlignment="Stretch" />
            </StackPanel>
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate PricePerBag}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxPricePerBag" Text="{Binding PricePerBag}" Watermark="EUR" Classes="Outlined" />
            </StackPanel>
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate PricePerCubicMeter}"
                         FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxPricePerM3" Text="{Binding PricePerCubicMeter}" Watermark="EUR" Classes="Outlined" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Visualisierung -->
        <Border AutomationProperties.AutomationId="Concrete_CardVisualization" Classes="Card" Padding="0" Height="220" Margin="0,0,0,0"
                IsVisible="{Binding HasResult}" ClipToBounds="True" CornerRadius="12">
          <skia:SKCanvasView AutomationProperties.AutomationId="Concrete_Canvas" x:Name="ConcreteCanvas" PaintSurface="OnPaintVisualization" />
        </Border>

        <!-- Ergebnisse -->
        <Border AutomationProperties.AutomationId="Concrete_CardResult" Classes="Card Elevated StatsCard"
                IsVisible="{Binding HasResult}">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate Result}"
                       FontSize="16" FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryBrush}" />

            <!-- Volumen -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate ResultVolume}"
                         FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Concrete_TxtVolume" Grid.Column="1" Text="{Binding VolumeDisplay}"
                         FontSize="16" FontWeight="Bold"
                         Foreground="{DynamicResource AccentBrush}" />
            </Grid>

            <!-- Fertigbeton-Säcke -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate ResultBags}"
                         FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Concrete_TxtBags" Grid.Column="1" Text="{Binding BagsDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
            </Grid>

            <!-- Separator: Selbstmischung -->
            <Border Height="1" Background="{DynamicResource CardBorderBrush}" Margin="0,4" />
            <TextBlock Text="{loc:Translate SelfMixing}"
                       FontSize="13" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondaryBrush}" />

            <!-- Zement -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate ResultCite}"
                         FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Concrete_TxtCite" Grid.Column="1" Text="{Binding CementDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
            </Grid>

            <!-- Sand -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate ResultSand}"
                         FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Concrete_TxtSand" Grid.Column="1" Text="{Binding SandDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
            </Grid>

            <!-- Kies -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate ResultGravel}"
                         FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Concrete_TxtGravel" Grid.Column="1" Text="{Binding GravelDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
            </Grid>

            <!-- Wasser -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate ResultWater}"
                         FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Concrete_TxtWater" Grid.Column="1" Text="{Binding WaterDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
            </Grid>

            <!-- Kosten pro Sack -->
            <Grid ColumnDefinitions="*,Auto"
                  IsVisible="{Binding ShowBagCost}">
              <TextBlock Grid.Column="0" Text="{loc:Translate CostBags}"
                         FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Concrete_TxtBagCost" Grid.Column="1" Text="{Binding BagCostDisplay}"
                         FontSize="16" FontWeight="Bold"
                         Foreground="{DynamicResource PrimaryBrush}" />
            </Grid>

            <!-- Kosten pro m³ -->
            <Grid ColumnDefinitions="*,Auto"
                  IsVisible="{Binding ShowCubicMeterCost}">
              <TextBlock Grid.Column="0" Text="{loc:Translate CostCubicMeter}"
                         FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Concrete_TxtCubicMeterCost" Grid.Column="1" Text="{Binding CubicMeterCostDisplay}"
                         FontSize="16" FontWeight="Bold"
                         Foreground="{DynamicResource PrimaryBrush}" />
            </Grid>

            <!-- Aktions-Buttons: Share + PDF Export -->
            <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
              <Button AutomationProperties.AutomationId="Concrete_BtnShare" Grid.Column="0"
                      Command="{Binding ShareResultCommand}"
                      Classes="Outlined"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="4">
                  <mi:MaterialIcon Kind="ContentCopy" Width="16" Height="16"
                                   Foreground="{DynamicResource AccentBrush}" />
                  <TextBlock Text="{loc:Translate ShareResult}" FontSize="12"
                             VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                </StackPanel>
              </Button>
              <Button AutomationProperties.AutomationId="Concrete_BtnExport" Grid.Column="2"
                      Command="{Binding ExportMaterialListCommand}"
                      Classes="Outlined"
                      IsEnabled="{Binding !IsExporting}"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="4">
                  <mi:MaterialIcon Kind="FilePdfBox" Width="16" Height="16"
                                   Foreground="{DynamicResource AccentBrush}" />
                  <TextBlock Text="{loc:Translate ExportMaterialList}" FontSize="12"
                             VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                </StackPanel>
              </Button>
            </Grid>
          </StackPanel>
        </Border>

      </StackPanel>
    </ScrollViewer>

    <!-- Row 2: Action Buttons -->
    <Border AutomationProperties.AutomationId="Concrete_ActionBar" Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}">
      <Grid ColumnDefinitions="*,8,*,8,*">
        <Button AutomationProperties.AutomationId="Concrete_BtnReset" Grid.Column="0"
                Classes="Outlined"
                Command="{Binding ResetCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Refresh" Width="16" Height="16"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="{loc:Translate Reset}" FontSize="12"
                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
          </StackPanel>
        </Button>
        <Button AutomationProperties.AutomationId="Concrete_BtnCalculate" Grid.Column="2"
                Classes="Primary"
                Command="{Binding CalculateCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Calculator" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Calculate}" FontSize="12"
                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
          </StackPanel>
        </Button>
        <Button AutomationProperties.AutomationId="Concrete_BtnSave" Grid.Column="4"
                Classes="Secondary"
                Command="{Binding SaveProjectCommand}"
                IsVisible="{Binding HasResult}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="ContentSave" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Save}" FontSize="12"
                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

    <!-- Save Dialog Overlay -->
    <Border AutomationProperties.AutomationId="Concrete_SaveOverlay" Grid.Row="0" Grid.RowSpan="3"
            ZIndex="100"
            Background="#80000000"
            IsVisible="{Binding ShowSaveDialog}">
      <Border Background="{DynamicResource SurfaceBrush}"
              CornerRadius="16"
              Padding="24"
              MaxWidth="340"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
        <StackPanel Spacing="16">
          <TextBlock Text="{loc:Translate SaveProject}"
                     FontSize="18" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     HorizontalAlignment="Center" />
          <TextBox AutomationProperties.AutomationId="Concrete_TxtBoxProjectName" Text="{Binding SaveProjectName}"
                   Watermark="{loc:Translate ProjectName}"
                   Classes="Outlined" />
          <Grid ColumnDefinitions="*,12,*">
            <Button AutomationProperties.AutomationId="Concrete_BtnCancelSave" Grid.Column="0"
                    Classes="Outlined"
                    Command="{Binding CancelSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Cancel}" />
            <Button AutomationProperties.AutomationId="Concrete_BtnConfirmSave" Grid.Column="2"
                    Classes="Primary"
                    Command="{Binding ConfirmSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Save}" />
          </Grid>
        </StackPanel>
      </Border>
    </Border>

  </Grid>

</UserControl>
