<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerRechner.ViewModels.Floor"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             x:Class="HandwerkerRechner.Views.Floor.FlooringCalculatorView"
             x:DataType="vm:FlooringCalculatorViewModel">

  <Grid RowDefinitions="Auto,*,Auto">

    <!-- ============================================ -->
    <!-- Row 0: Header with Back Button + Title       -->
    <!-- ============================================ -->
    <Border Grid.Row="0"
            Background="{DynamicResource WarningBrush}"
            Padding="16,12,16,20"
            CornerRadius="0,0,24,24">
      <Grid ColumnDefinitions="Auto,*">
        <Button Command="{Binding GoBackCommand}"
                Background="#33FFFFFF"
                CornerRadius="20"
                Width="40" Height="40"
                Padding="0">
          <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
        </Button>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                    Margin="12,0,0,0" VerticalAlignment="Center">
          <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
            <mi:MaterialIcon Kind="TextureBox" Width="22" Height="22"
                             Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <TextBlock Text="{loc:Translate CalcFlooring}"
                     FontSize="20" FontWeight="Bold" Foreground="White"
                     VerticalAlignment="Center" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- ============================================ -->
    <!-- Row 1: Scrollable Content                    -->
    <!-- ============================================ -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="16" Margin="16,16,16,200">

        <!-- Input Section: Room Dimensions -->
        <Border Classes="Card StatsCard">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate RoomDimensions}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />

            <!-- Room Length -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate RoomLength}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox Text="{Binding RoomLength}"
                       Watermark="m"
                       Classes="Outlined" />
            </StackPanel>

            <!-- Room Width -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate RoomWidth}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox Text="{Binding RoomWidth}"
                       Watermark="m"
                       Classes="Outlined" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Input Section: Board Dimensions -->
        <Border Classes="Card StatsCard">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate CalcFlooring}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />

            <!-- Board Length -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate BoardLength}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox Text="{Binding BoardLength}"
                       Watermark="m"
                       Classes="Outlined" />
            </StackPanel>

            <!-- Board Width -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate BoardWidth}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox Text="{Binding BoardWidth}"
                       Watermark="cm"
                       Classes="Outlined" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Input Section: Additional Options -->
        <Border Classes="Card StatsCard">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate CostCalculation}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />

            <!-- Waste Percentage -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate Waste}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox Text="{Binding WastePercentage}"
                       Watermark="%"
                       Classes="Outlined" />
            </StackPanel>

            <!-- Price Per Board (optional) -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate PricePerBoard}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox Text="{Binding PricePerBoard}"
                       Watermark="EUR"
                       Classes="Outlined" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Results Section -->
        <Border Classes="Card Elevated StatsCard"
                IsVisible="{Binding HasResult}">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate Result}"
                       FontSize="16" FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryBrush}" />

            <!-- Area -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0"
                         Text="{loc:Translate TotalArea}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock Grid.Column="1"
                         Text="{Binding AreaDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
            </Grid>

            <!-- Boards Needed -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0"
                         Text="{loc:Translate BoardsNeeded}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock Grid.Column="1"
                         Text="{Binding BoardsNeededDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
            </Grid>

            <!-- Boards With Waste -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0"
                         Text="{loc:Translate BoardsWithWaste}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock Grid.Column="1"
                         Text="{Binding BoardsWithWasteDisplay}"
                         FontSize="16" FontWeight="Bold"
                         Foreground="{DynamicResource AccentBrush}" />
            </Grid>

            <!-- Total Cost (only when ShowCost) -->
            <Grid ColumnDefinitions="*,Auto"
                  IsVisible="{Binding ShowCost}">
              <TextBlock Grid.Column="0"
                         Text="{loc:Translate TotalCost}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock Grid.Column="1"
                         Text="{Binding TotalCostDisplay}"
                         FontSize="16" FontWeight="Bold"
                         Foreground="{DynamicResource PrimaryBrush}" />
            </Grid>
            <!-- Aktions-Buttons: Share + PDF Export -->
            <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
              <Button Grid.Column="0"
                      Command="{Binding ShareResultCommand}"
                      Classes="Outlined"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="6">
                  <mi:MaterialIcon Kind="ContentCopy" Width="18" Height="18"
                                   Foreground="{DynamicResource AccentBrush}" />
                  <TextBlock Text="{loc:Translate ShareResult}"
                             VerticalAlignment="Center" />
                </StackPanel>
              </Button>
              <Button Grid.Column="2"
                      Command="{Binding ExportMaterialListCommand}"
                      Classes="Outlined"
                      IsEnabled="{Binding !IsExporting}"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="6">
                  <mi:MaterialIcon Kind="FilePdfBox" Width="18" Height="18"
                                   Foreground="{DynamicResource AccentBrush}" />
                  <TextBlock Text="{loc:Translate ExportMaterialList}"
                             VerticalAlignment="Center" />
                </StackPanel>
              </Button>
            </Grid>
          </StackPanel>
        </Border>

      </StackPanel>
    </ScrollViewer>

    <!-- ============================================ -->
    <!-- Row 2: Action Buttons                        -->
    <!-- ============================================ -->
    <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}">
      <Grid ColumnDefinitions="*,8,*,8,*">
        <!-- Reset -->
        <Button Grid.Column="0"
                Classes="Outlined"
                Command="{Binding ResetCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="6">
            <mi:MaterialIcon Kind="Refresh" Width="18" Height="18"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="{loc:Translate Reset}"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>

        <!-- Calculate -->
        <Button Grid.Column="2"
                Classes="Primary"
                Command="{Binding CalculateCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="6">
            <mi:MaterialIcon Kind="Calculator" Width="18" Height="18" />
            <TextBlock Text="{loc:Translate Calculate}"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>

        <!-- Save Project -->
        <Button Grid.Column="4"
                Classes="Secondary"
                Command="{Binding SaveProjectCommand}"
                IsVisible="{Binding HasResult}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="6">
            <mi:MaterialIcon Kind="ContentSave" Width="18" Height="18" />
            <TextBlock Text="{loc:Translate Save}"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

    <!-- Save Project Dialog Overlay -->
    <Border Grid.Row="0" Grid.RowSpan="3"
            ZIndex="100"
            Background="#80000000"
            IsVisible="{Binding ShowSaveDialog}">
      <Border Background="{DynamicResource SurfaceBrush}"
              CornerRadius="16"
              Padding="24"
              MaxWidth="340"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
        <StackPanel Spacing="16">
          <TextBlock Text="{loc:Translate SaveProject}"
                     FontSize="18" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     HorizontalAlignment="Center" />
          <TextBox Text="{Binding SaveProjectName}"
                   Watermark="{loc:Translate ProjectName}"
                   Classes="Outlined" />
          <Grid ColumnDefinitions="*,12,*">
            <Button Grid.Column="0"
                    Classes="Outlined"
                    Command="{Binding CancelSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Cancel}" />
            <Button Grid.Column="2"
                    Classes="Primary"
                    Command="{Binding ConfirmSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Save}" />
          </Grid>
        </StackPanel>
      </Border>
    </Border>

  </Grid>

</UserControl>
