<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerRechner.ViewModels.Premium"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:conv="using:HandwerkerRechner.Converters"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             x:Class="HandwerkerRechner.Views.Premium.RoofSolarView"
             x:DataType="vm:RoofSolarViewModel">

  <UserControl.Resources>
    <conv:IntEqualsConverter x:Key="IntEquals" />
  </UserControl.Resources>

  <Grid RowDefinitions="Auto,*,Auto">

    <!-- Header -->
    <Border Grid.Row="0"
            Background="{DynamicResource SurfaceBrush}"
            BorderThickness="0,0,0,1"
            BorderBrush="{DynamicResource CardBorderBrush}"
            Padding="16,12">
      <Grid ColumnDefinitions="Auto,*">
        <Button Grid.Column="0" Classes="Text"
                Command="{Binding GoBackCommand}"
                Padding="8">
          <mi:MaterialIcon Kind="ArrowLeft" Width="24" Height="24"
                           Foreground="{DynamicResource TextPrimaryBrush}" />
        </Button>
        <TextBlock Grid.Column="1" Text="{loc:Translate CategoryRoofSolar}"
                   FontSize="20" FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   VerticalAlignment="Center" Margin="12,0,0,0" />
      </Grid>
    </Border>

    <!-- Content -->
    <ScrollViewer Grid.Row="1" Padding="16,16,16,200">
      <StackPanel Spacing="16">

        <!-- Calculator Selector -->
        <Border Classes="Card" Padding="16">
          <ComboBox ItemsSource="{Binding Calculators}"
                    SelectedIndex="{Binding SelectedCalculator}"
                    HorizontalAlignment="Stretch" />
        </Border>

        <!-- Calculator 0: Roof Pitch -->
        <Panel IsVisible="{Binding SelectedCalculator, Converter={StaticResource IntEquals}, ConverterParameter=0}">
          <StackPanel Spacing="16">

            <!-- Input -->
            <Border Classes="Card" Padding="16">
              <StackPanel Spacing="12">
                <TextBlock Text="{loc:Translate RoofPitch}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate Run}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding Run}" Watermark="m" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate Rise}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding Rise}" Watermark="m" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Results -->
            <Border Classes="Card Elevated" Padding="16"
                    IsVisible="{Binding HasResult}">
              <StackPanel Spacing="10">
                <TextBlock Text="{loc:Translate Result}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryBrush}" />

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate UnitDegrees}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding PitchResult.PitchDegrees}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate UnitPercent}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding PitchResult.PitchPercent}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </Grid>

                <!-- Aktions-Buttons: Share + PDF Export -->
                <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
                  <Button Grid.Column="0"
                          Command="{Binding ShareResultCommand}"
                          Classes="Outlined"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                      <mi:MaterialIcon Kind="ContentCopy" Width="18" Height="18"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ShareResult}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                  <Button Grid.Column="2"
                          Command="{Binding ExportMaterialListCommand}"
                          Classes="Outlined"
                          IsEnabled="{Binding !IsExporting}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                      <mi:MaterialIcon Kind="FilePdfBox" Width="18" Height="18"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ExportMaterialList}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                </Grid>
              </StackPanel>
            </Border>

          </StackPanel>
        </Panel>

        <!-- Calculator 1: Roof Tiles -->
        <Panel IsVisible="{Binding SelectedCalculator, Converter={StaticResource IntEquals}, ConverterParameter=1}">
          <StackPanel Spacing="16">

            <!-- Input -->
            <Border Classes="Card" Padding="16">
              <StackPanel Spacing="12">
                <TextBlock Text="{loc:Translate RoofTiles}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate UnitSquareMeters}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding RoofArea}" Watermark="m²" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate TilesPerSqm}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding TilesPerSqm}" Watermark="pcs/m²" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate CostCalculation}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PricePerTile}"
                           Watermark="EUR" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Results -->
            <Border Classes="Card Elevated" Padding="16"
                    IsVisible="{Binding HasResult}">
              <StackPanel Spacing="10">
                <TextBlock Text="{loc:Translate Result}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryBrush}" />

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate UnitPieces}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding TilesResult.TilesNeeded}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate TilesWithReserve}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding TilesResult.TilesWithReserve}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto"
                      IsVisible="{Binding ShowTileCost}">
                  <TextBlock Grid.Column="0" Text="{loc:Translate TotalCost}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding RoofTileCostDisplay}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="{DynamicResource AccentBrush}" />
                </Grid>

                <!-- Aktions-Buttons: Share + PDF Export -->
                <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
                  <Button Grid.Column="0"
                          Command="{Binding ShareResultCommand}"
                          Classes="Outlined"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                      <mi:MaterialIcon Kind="ContentCopy" Width="18" Height="18"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ShareResult}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                  <Button Grid.Column="2"
                          Command="{Binding ExportMaterialListCommand}"
                          Classes="Outlined"
                          IsEnabled="{Binding !IsExporting}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                      <mi:MaterialIcon Kind="FilePdfBox" Width="18" Height="18"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ExportMaterialList}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                </Grid>
              </StackPanel>
            </Border>

          </StackPanel>
        </Panel>

        <!-- Calculator 2: Solar Yield -->
        <Panel IsVisible="{Binding SelectedCalculator, Converter={StaticResource IntEquals}, ConverterParameter=2}">
          <StackPanel Spacing="16">

            <!-- Input -->
            <Border Classes="Card" Padding="16">
              <StackPanel Spacing="12">
                <TextBlock Text="{loc:Translate SolarYield}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate UnitSquareMeters}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding SolarRoofArea}" Watermark="m²" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate PanelEfficiency}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PanelEfficiency}" Watermark="%" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate Orientation}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <ComboBox ItemsSource="{Binding Orientations}"
                            SelectedIndex="{Binding SelectedOrientation}"
                            HorizontalAlignment="Stretch" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate TiltDegrees}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding TiltDegrees}" Watermark="°" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate CostCalculation}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding SolarSystemCost}"
                           Watermark="EUR" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Results -->
            <Border Classes="Card Elevated" Padding="16"
                    IsVisible="{Binding HasResult}">
              <StackPanel Spacing="10">
                <TextBlock Text="{loc:Translate Result}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryBrush}" />

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate UsableArea}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding SolarResult.UsableArea}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate KwPeak}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding SolarResult.KwPeak}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate AnnualYield}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding SolarResult.AnnualYieldKwh}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto"
                      IsVisible="{Binding ShowSolarCost}">
                  <TextBlock Grid.Column="0" Text="{loc:Translate TotalCost}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding SolarCostDisplay}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="{DynamicResource AccentBrush}" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto"
                      IsVisible="{Binding ShowSolarCost}">
                  <TextBlock Grid.Column="0" Text="{loc:Translate PaybackTime}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding PaybackTimeDisplay}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
                </Grid>

                <!-- Aktions-Buttons: Share + PDF Export -->
                <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
                  <Button Grid.Column="0"
                          Command="{Binding ShareResultCommand}"
                          Classes="Outlined"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                      <mi:MaterialIcon Kind="ContentCopy" Width="18" Height="18"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ShareResult}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                  <Button Grid.Column="2"
                          Command="{Binding ExportMaterialListCommand}"
                          Classes="Outlined"
                          IsEnabled="{Binding !IsExporting}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                      <mi:MaterialIcon Kind="FilePdfBox" Width="18" Height="18"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ExportMaterialList}"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                </Grid>
              </StackPanel>
            </Border>

          </StackPanel>
        </Panel>

      </StackPanel>
    </ScrollViewer>

    <!-- Buttons -->
    <Border Grid.Row="2" Padding="16,12"
            Background="{DynamicResource SurfaceBrush}"
            BorderThickness="0,1,0,0"
            BorderBrush="{DynamicResource CardBorderBrush}">
      <Grid ColumnDefinitions="*,8,*,8,*">
        <Button Grid.Column="0"
                Command="{Binding ResetCommand}"
                Classes="Outlined"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="6">
            <mi:MaterialIcon Kind="Refresh" Width="18" Height="18"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="{loc:Translate Reset}"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <Button Grid.Column="2"
                Command="{Binding CalculateCommand}"
                Classes="Primary"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="6">
            <mi:MaterialIcon Kind="Calculator" Width="18" Height="18" />
            <TextBlock Text="{loc:Translate Calculate}"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <!-- Save Project -->
        <Button Grid.Column="4"
                Classes="Secondary"
                Command="{Binding SaveProjectCommand}"
                IsVisible="{Binding HasResult}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="6">
            <mi:MaterialIcon Kind="ContentSave" Width="18" Height="18" />
            <TextBlock Text="{loc:Translate Save}"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

    <!-- Save Project Dialog Overlay -->
    <Border Grid.Row="0" Grid.RowSpan="3"
            ZIndex="100"
            Background="#80000000"
            IsVisible="{Binding ShowSaveDialog}">
      <Border Background="{DynamicResource SurfaceBrush}"
              CornerRadius="16"
              Padding="24"
              MaxWidth="340"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
        <StackPanel Spacing="16">
          <TextBlock Text="{loc:Translate SaveProject}"
                     FontSize="18" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     HorizontalAlignment="Center" />
          <TextBox Text="{Binding SaveProjectName}"
                   Watermark="{loc:Translate ProjectName}"
                   Classes="Outlined" />
          <Grid ColumnDefinitions="*,12,*">
            <Button Grid.Column="0"
                    Classes="Outlined"
                    Command="{Binding CancelSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Cancel}" />
            <Button Grid.Column="2"
                    Classes="Primary"
                    Command="{Binding ConfirmSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Save}" />
          </Grid>
        </StackPanel>
      </Border>
    </Border>

  </Grid>

</UserControl>
