<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerRechner.ViewModels.Premium"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:conv="using:HandwerkerRechner.Converters"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="HandwerkerRechner.Views.Premium.MetalView"
             x:DataType="vm:MetalViewModel">

  <UserControl.Resources>
    <conv:IntEqualsConverter x:Key="IntEquals" />
  </UserControl.Resources>

  <Grid RowDefinitions="Auto,*,Auto"
        AutomationProperties.AutomationId="Metal_RootGrid">

    <!-- Header -->
    <Border Grid.Row="0"
            Background="{DynamicResource AccentBrush}"
            Padding="16,12,16,20"
            CornerRadius="0,0,24,24"
            AutomationProperties.AutomationId="Metal_HeaderBorder">
      <Grid ColumnDefinitions="Auto,*">
        <Button Command="{Binding GoBackCommand}"
                Background="#33FFFFFF"
                CornerRadius="20"
                Width="40" Height="40"
                Padding="0"
                AutomationProperties.AutomationId="Metal_BtnBack">
          <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
        </Button>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                    Margin="12,0,0,0" VerticalAlignment="Center">
          <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
            <mi:MaterialIcon Kind="HammerWrench" Width="22" Height="22"
                             Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <TextBlock Text="{loc:Translate MetalCalculator}"
                     FontSize="20" FontWeight="Bold" Foreground="White"
                     VerticalAlignment="Center"
                     AutomationProperties.AutomationId="Metal_TxtTitle" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- Content -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                  AutomationProperties.AutomationId="Metal_ScrollViewer">
      <StackPanel Spacing="16" Margin="16,16,16,200">

        <!-- Calculator Selector -->
        <Border Classes="Card StatsCard"
                AutomationProperties.AutomationId="Metal_CardSelector">
          <ComboBox ItemsSource="{Binding Calculators}"
                    SelectedIndex="{Binding SelectedCalculator}"
                    HorizontalAlignment="Stretch"
                    AutomationProperties.AutomationId="Metal_CmbCalculator" />
        </Border>

        <!-- Visualisierung -->
        <Border Classes="Card" Padding="0" Height="220" Margin="0,0,0,0"
                IsVisible="{Binding HasResult}" ClipToBounds="True" CornerRadius="12"
                AutomationProperties.AutomationId="Metal_CardVisualization">
          <skia:SKCanvasView x:Name="MetalCanvas" PaintSurface="OnPaintVisualization"
                             AutomationProperties.AutomationId="Metal_Canvas" />
        </Border>

        <!-- Calculator 0: Metal Weight -->
        <Panel IsVisible="{Binding SelectedCalculator, Converter={StaticResource IntEquals}, ConverterParameter=0}">
          <StackPanel Spacing="16">

            <!-- Input -->
            <Border Classes="Card StatsCard"
                    AutomationProperties.AutomationId="Metal_CardWeightInput">
              <StackPanel Spacing="12">
                <TextBlock Text="{loc:Translate MetalWeight}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate Material}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <ComboBox ItemsSource="{Binding Metals}"
                            SelectedIndex="{Binding SelectedMetal}"
                            HorizontalAlignment="Stretch"
                            AutomationProperties.AutomationId="Metal_CmbMetal" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate Profile}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <ComboBox ItemsSource="{Binding Profiles}"
                            SelectedIndex="{Binding SelectedProfile}"
                            HorizontalAlignment="Stretch"
                            AutomationProperties.AutomationId="Metal_CmbProfile" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate LengthM}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding Length}" Watermark="mm"
                           AutomationProperties.AutomationId="Metal_TxtBoxLength" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate Dimension1}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding Dimension1}" Watermark="mm"
                           AutomationProperties.AutomationId="Metal_TxtBoxDimension1" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate Dimension2}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding Dimension2}" Watermark="mm"
                           AutomationProperties.AutomationId="Metal_TxtBoxDimension2" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate WallThickness}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding WallThickness}" Watermark="mm"
                           AutomationProperties.AutomationId="Metal_TxtBoxWallThickness" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate CostCalculation}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PricePerKg}"
                           Watermark="EUR/kg"
                           AutomationProperties.AutomationId="Metal_TxtBoxPricePerKg" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Results -->
            <Border Classes="Card Elevated StatsCard"
                    IsVisible="{Binding HasResult}"
                    AutomationProperties.AutomationId="Metal_CardWeightResult">
              <StackPanel Spacing="10">
                <TextBlock Text="{loc:Translate Result}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           AutomationProperties.AutomationId="Metal_TxtWeightResultHeader" />

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate UnitKilograms}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding WeightResult.Weight}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Metal_TxtWeight" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate Volume}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding WeightResult.Volume}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Metal_TxtVolume" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto"
                      IsVisible="{Binding ShowMetalCost}">
                  <TextBlock Grid.Column="0" Text="{loc:Translate TotalCost}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding MetalCostDisplay}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="{DynamicResource AccentBrush}"
                             AutomationProperties.AutomationId="Metal_TxtMetalCost" />
                </Grid>

                <!-- Aktions-Buttons: Share + PDF Export -->
                <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
                  <Button Grid.Column="0"
                          Command="{Binding ShareResultCommand}"
                          Classes="Outlined"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Metal_BtnShareWeight">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="ContentCopy" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ShareResult}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                  <Button Grid.Column="2"
                          Command="{Binding ExportMaterialListCommand}"
                          Classes="Outlined"
                          IsEnabled="{Binding !IsExporting}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Metal_BtnExportWeight">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="FilePdfBox" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ExportMaterialList}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                </Grid>
              </StackPanel>
            </Border>

          </StackPanel>
        </Panel>

        <!-- Calculator 1: Thread Drill -->
        <Panel IsVisible="{Binding SelectedCalculator, Converter={StaticResource IntEquals}, ConverterParameter=1}">
          <StackPanel Spacing="16">

            <!-- Input -->
            <Border Classes="Card StatsCard"
                    AutomationProperties.AutomationId="Metal_CardThreadInput">
              <StackPanel Spacing="12">
                <TextBlock Text="{loc:Translate ThreadDrill}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate ThreadDrill}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <ComboBox ItemsSource="{Binding ThreadSizes}"
                            SelectedIndex="{Binding SelectedThread}"
                            HorizontalAlignment="Stretch"
                            AutomationProperties.AutomationId="Metal_CmbThread" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Results -->
            <Border Classes="Card Elevated StatsCard"
                    IsVisible="{Binding HasResult}"
                    AutomationProperties.AutomationId="Metal_CardThreadResult">
              <StackPanel Spacing="10">
                <TextBlock Text="{loc:Translate Result}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           AutomationProperties.AutomationId="Metal_TxtThreadResultHeader" />

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate ThreadDrill}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding ThreadResult.ThreadSize}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Metal_TxtThreadSize" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate DrillSize}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding ThreadResult.DrillSize}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="{DynamicResource AccentBrush}"
                             AutomationProperties.AutomationId="Metal_TxtDrillSize" />
                </Grid>

                <!-- Aktions-Buttons: Share + PDF Export -->
                <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
                  <Button Grid.Column="0"
                          Command="{Binding ShareResultCommand}"
                          Classes="Outlined"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Metal_BtnShareThread">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="ContentCopy" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ShareResult}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                  <Button Grid.Column="2"
                          Command="{Binding ExportMaterialListCommand}"
                          Classes="Outlined"
                          IsEnabled="{Binding !IsExporting}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Metal_BtnExportThread">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="FilePdfBox" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ExportMaterialList}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                </Grid>
              </StackPanel>
            </Border>

          </StackPanel>
        </Panel>

      </StackPanel>
    </ScrollViewer>

    <!-- Buttons -->
    <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}"
            AutomationProperties.AutomationId="Metal_BottomBar">
      <Grid ColumnDefinitions="*,8,*,8,*">
        <Button Grid.Column="0"
                Command="{Binding ResetCommand}"
                Classes="Outlined"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                AutomationProperties.AutomationId="Metal_BtnReset">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Refresh" Width="16" Height="16"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="{loc:Translate Reset}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <Button Grid.Column="2"
                Command="{Binding CalculateCommand}"
                Classes="Primary"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                AutomationProperties.AutomationId="Metal_BtnCalculate">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Calculator" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Calculate}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <!-- Save Project -->
        <Button Grid.Column="4"
                Classes="Secondary"
                Command="{Binding SaveProjectCommand}"
                IsVisible="{Binding HasResult}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                AutomationProperties.AutomationId="Metal_BtnSave">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="ContentSave" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Save}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

    <!-- Save Project Dialog Overlay -->
    <Border Grid.Row="0" Grid.RowSpan="3"
            ZIndex="100"
            Background="#80000000"
            IsVisible="{Binding ShowSaveDialog}"
            AutomationProperties.AutomationId="Metal_SaveDialogOverlay">
      <Border Background="{DynamicResource SurfaceBrush}"
              CornerRadius="16"
              Padding="24"
              MaxWidth="340"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              AutomationProperties.AutomationId="Metal_SaveDialogCard">
        <StackPanel Spacing="16">
          <TextBlock Text="{loc:Translate SaveProject}"
                     FontSize="18" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     HorizontalAlignment="Center"
                     AutomationProperties.AutomationId="Metal_TxtSaveDialogTitle" />
          <TextBox Text="{Binding SaveProjectName}"
                   Watermark="{loc:Translate ProjectName}"
                   Classes="Outlined"
                   AutomationProperties.AutomationId="Metal_TxtBoxProjectName" />
          <Grid ColumnDefinitions="*,12,*">
            <Button Grid.Column="0"
                    Classes="Outlined"
                    Command="{Binding CancelSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Cancel}"
                    AutomationProperties.AutomationId="Metal_BtnCancelSave" />
            <Button Grid.Column="2"
                    Classes="Primary"
                    Command="{Binding ConfirmSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Save}"
                    AutomationProperties.AutomationId="Metal_BtnConfirmSave" />
          </Grid>
        </StackPanel>
      </Border>
    </Border>

  </Grid>

</UserControl>
