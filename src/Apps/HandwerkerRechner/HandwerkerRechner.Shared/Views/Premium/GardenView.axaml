<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerRechner.ViewModels.Premium"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:conv="using:HandwerkerRechner.Converters"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="HandwerkerRechner.Views.Premium.GardenView"
             x:DataType="vm:GardenViewModel">

  <UserControl.Resources>
    <conv:IntEqualsConverter x:Key="IntEquals" />
  </UserControl.Resources>

  <Grid RowDefinitions="Auto,*,Auto"
        AutomationProperties.AutomationId="Garden_RootGrid">

    <!-- Header -->
    <Border Grid.Row="0"
            Background="{DynamicResource AccentBrush}"
            Padding="16,12,16,20"
            CornerRadius="0,0,24,24"
            AutomationProperties.AutomationId="Garden_HeaderBorder">
      <Grid ColumnDefinitions="Auto,*">
        <Button Command="{Binding GoBackCommand}"
                Background="#33FFFFFF"
                CornerRadius="20"
                Width="40" Height="40"
                Padding="0"
                AutomationProperties.AutomationId="Garden_BtnBack">
          <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
        </Button>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                    Margin="12,0,0,0" VerticalAlignment="Center">
          <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
            <mi:MaterialIcon Kind="Flower" Width="22" Height="22"
                             Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <TextBlock Text="{loc:Translate GardenCalculator}"
                     FontSize="20" FontWeight="Bold" Foreground="White"
                     VerticalAlignment="Center"
                     AutomationProperties.AutomationId="Garden_TxtTitle" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- Content -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                  AutomationProperties.AutomationId="Garden_ScrollViewer">
      <StackPanel Spacing="16" Margin="16,16,16,200">

        <!-- Calculator Selector -->
        <Border Classes="Card StatsCard"
                AutomationProperties.AutomationId="Garden_CardSelector">
          <ComboBox ItemsSource="{Binding Calculators}"
                    SelectedIndex="{Binding SelectedCalculator}"
                    HorizontalAlignment="Stretch"
                    AutomationProperties.AutomationId="Garden_CmbCalculator" />
        </Border>

        <!-- Visualisierung -->
        <Border Classes="Card" Padding="0" Height="220" Margin="0,0,0,0"
                IsVisible="{Binding HasResult}" ClipToBounds="True" CornerRadius="12"
                AutomationProperties.AutomationId="Garden_CardVisualization">
          <skia:SKCanvasView x:Name="GardenCanvas" PaintSurface="OnPaintVisualization"
                             AutomationProperties.AutomationId="Garden_Canvas" />
        </Border>

        <!-- Calculator 0: Paving -->
        <Panel IsVisible="{Binding SelectedCalculator, Converter={StaticResource IntEquals}, ConverterParameter=0}">
          <StackPanel Spacing="16">

            <!-- Input -->
            <Border Classes="Card StatsCard"
                    AutomationProperties.AutomationId="Garden_CardPavingInput">
              <StackPanel Spacing="12">
                <TextBlock Text="{loc:Translate Paving}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate UnitSquareMeters}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PavingArea}" Watermark="m²"
                           AutomationProperties.AutomationId="Garden_TxtBoxPavingArea" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate StoneLength}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding StoneLength}" Watermark="cm"
                           AutomationProperties.AutomationId="Garden_TxtBoxStoneLength" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate StoneWidth}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding StoneWidth}" Watermark="cm"
                           AutomationProperties.AutomationId="Garden_TxtBoxStoneWidth" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate JointWidth}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding JointWidth}" Watermark="mm"
                           AutomationProperties.AutomationId="Garden_TxtBoxJointWidth" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate CostCalculation}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PricePerStone}"
                           Watermark="EUR"
                           AutomationProperties.AutomationId="Garden_TxtBoxPricePerStone" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Results -->
            <Border Classes="Card Elevated StatsCard"
                    IsVisible="{Binding HasResult}"
                    AutomationProperties.AutomationId="Garden_CardPavingResult">
              <StackPanel Spacing="10">
                <TextBlock Text="{loc:Translate Result}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           AutomationProperties.AutomationId="Garden_TxtPavingResultHeader" />

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate UnitPieces}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding PavingResult.StonesNeeded}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Garden_TxtStonesNeeded" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate StonesWithReserve}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding PavingResult.StonesWithReserve}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Garden_TxtStonesWithReserve" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto"
                      IsVisible="{Binding ShowPavingCost}">
                  <TextBlock Grid.Column="0" Text="{loc:Translate TotalCost}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding PavingCostDisplay}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="{DynamicResource AccentBrush}"
                             AutomationProperties.AutomationId="Garden_TxtPavingCost" />
                </Grid>

                <!-- Aktions-Buttons: Share + PDF Export -->
                <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
                  <Button Grid.Column="0"
                          Command="{Binding ShareResultCommand}"
                          Classes="Outlined"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Garden_BtnSharePaving">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="ContentCopy" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ShareResult}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                  <Button Grid.Column="2"
                          Command="{Binding ExportMaterialListCommand}"
                          Classes="Outlined"
                          IsEnabled="{Binding !IsExporting}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Garden_BtnExportPaving">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="FilePdfBox" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ExportMaterialList}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                </Grid>
              </StackPanel>
            </Border>

          </StackPanel>
        </Panel>

        <!-- Calculator 1: Soil -->
        <Panel IsVisible="{Binding SelectedCalculator, Converter={StaticResource IntEquals}, ConverterParameter=1}">
          <StackPanel Spacing="16">

            <!-- Input -->
            <Border Classes="Card StatsCard"
                    AutomationProperties.AutomationId="Garden_CardSoilInput">
              <StackPanel Spacing="12">
                <TextBlock Text="{loc:Translate Soil}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate UnitSquareMeters}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding SoilArea}" Watermark="m²"
                           AutomationProperties.AutomationId="Garden_TxtBoxSoilArea" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate Depth}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding SoilDepth}" Watermark="cm"
                           AutomationProperties.AutomationId="Garden_TxtBoxSoilDepth" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate UnitLiters}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding BagLiters}" Watermark="L"
                           AutomationProperties.AutomationId="Garden_TxtBoxBagLiters" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate CostCalculation}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PricePerBag}"
                           Watermark="EUR"
                           AutomationProperties.AutomationId="Garden_TxtBoxPricePerBag" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Results -->
            <Border Classes="Card Elevated StatsCard"
                    IsVisible="{Binding HasResult}"
                    AutomationProperties.AutomationId="Garden_CardSoilResult">
              <StackPanel Spacing="10">
                <TextBlock Text="{loc:Translate Result}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           AutomationProperties.AutomationId="Garden_TxtSoilResultHeader" />

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate UnitLiters}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding SoilResult.VolumeLiters}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Garden_TxtVolumeLiters" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate BagsNeeded}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding SoilResult.BagsNeeded}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Garden_TxtBagsNeeded" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto"
                      IsVisible="{Binding ShowSoilCost}">
                  <TextBlock Grid.Column="0" Text="{loc:Translate TotalCost}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding SoilCostDisplay}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="{DynamicResource AccentBrush}"
                             AutomationProperties.AutomationId="Garden_TxtSoilCost" />
                </Grid>

                <!-- Aktions-Buttons: Share + PDF Export -->
                <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
                  <Button Grid.Column="0"
                          Command="{Binding ShareResultCommand}"
                          Classes="Outlined"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Garden_BtnShareSoil">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="ContentCopy" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ShareResult}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                  <Button Grid.Column="2"
                          Command="{Binding ExportMaterialListCommand}"
                          Classes="Outlined"
                          IsEnabled="{Binding !IsExporting}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Garden_BtnExportSoil">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="FilePdfBox" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ExportMaterialList}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                </Grid>
              </StackPanel>
            </Border>

          </StackPanel>
        </Panel>

        <!-- Calculator 2: Pond Liner -->
        <Panel IsVisible="{Binding SelectedCalculator, Converter={StaticResource IntEquals}, ConverterParameter=2}">
          <StackPanel Spacing="16">

            <!-- Input -->
            <Border Classes="Card StatsCard"
                    AutomationProperties.AutomationId="Garden_CardPondInput">
              <StackPanel Spacing="12">
                <TextBlock Text="{loc:Translate PondLiner}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate PondLength}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PondLength}" Watermark="m"
                           AutomationProperties.AutomationId="Garden_TxtBoxPondLength" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate PondWidth}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PondWidth}" Watermark="m"
                           AutomationProperties.AutomationId="Garden_TxtBoxPondWidth" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate PondDepth}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PondDepth}" Watermark="m"
                           AutomationProperties.AutomationId="Garden_TxtBoxPondDepth" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate Overlap}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding Overlap}" Watermark="m"
                           AutomationProperties.AutomationId="Garden_TxtBoxOverlap" />
                </StackPanel>

                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate CostCalculation}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBox Text="{Binding PricePerSqmLiner}"
                           Watermark="EUR/m²"
                           AutomationProperties.AutomationId="Garden_TxtBoxPricePerSqmLiner" />
                </StackPanel>
              </StackPanel>
            </Border>

            <!-- Results -->
            <Border Classes="Card Elevated StatsCard"
                    IsVisible="{Binding HasResult}"
                    AutomationProperties.AutomationId="Garden_CardPondResult">
              <StackPanel Spacing="10">
                <TextBlock Text="{loc:Translate Result}"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           AutomationProperties.AutomationId="Garden_TxtPondResultHeader" />

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate LinerLength}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding PondResult.LinerLength}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Garden_TxtLinerLength" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate LinerWidth}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding PondResult.LinerWidth}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Garden_TxtLinerWidth" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" Text="{loc:Translate UnitSquareMeters}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding PondResult.LinerArea}"
                             FontSize="15" FontWeight="SemiBold"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AutomationProperties.AutomationId="Garden_TxtLinerArea" />
                </Grid>

                <Grid ColumnDefinitions="*,Auto"
                      IsVisible="{Binding ShowLinerCost}">
                  <TextBlock Grid.Column="0" Text="{loc:Translate TotalCost}"
                             FontSize="13"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
                  <TextBlock Grid.Column="1" Text="{Binding LinerCostDisplay}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="{DynamicResource AccentBrush}"
                             AutomationProperties.AutomationId="Garden_TxtLinerCost" />
                </Grid>

                <!-- Aktions-Buttons: Share + PDF Export -->
                <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
                  <Button Grid.Column="0"
                          Command="{Binding ShareResultCommand}"
                          Classes="Outlined"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Garden_BtnSharePond">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="ContentCopy" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ShareResult}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                  <Button Grid.Column="2"
                          Command="{Binding ExportMaterialListCommand}"
                          Classes="Outlined"
                          IsEnabled="{Binding !IsExporting}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          AutomationProperties.AutomationId="Garden_BtnExportPond">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                      <mi:MaterialIcon Kind="FilePdfBox" Width="16" Height="16"
                                       Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate ExportMaterialList}"
                                 FontSize="12" TextTrimming="CharacterEllipsis"
                                 VerticalAlignment="Center" />
                    </StackPanel>
                  </Button>
                </Grid>
              </StackPanel>
            </Border>

          </StackPanel>
        </Panel>

      </StackPanel>
    </ScrollViewer>

    <!-- Buttons -->
    <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}"
            AutomationProperties.AutomationId="Garden_BottomBar">
      <Grid ColumnDefinitions="*,8,*,8,*">
        <Button Grid.Column="0"
                Command="{Binding ResetCommand}"
                Classes="Outlined"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                AutomationProperties.AutomationId="Garden_BtnReset">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Refresh" Width="16" Height="16"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="{loc:Translate Reset}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <Button Grid.Column="2"
                Command="{Binding CalculateCommand}"
                Classes="Primary"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                AutomationProperties.AutomationId="Garden_BtnCalculate">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Calculator" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Calculate}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <!-- Save Project -->
        <Button Grid.Column="4"
                Classes="Secondary"
                Command="{Binding SaveProjectCommand}"
                IsVisible="{Binding HasResult}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                AutomationProperties.AutomationId="Garden_BtnSave">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="ContentSave" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Save}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

    <!-- Save Project Dialog Overlay -->
    <Border Grid.Row="0" Grid.RowSpan="3"
            ZIndex="100"
            Background="#80000000"
            IsVisible="{Binding ShowSaveDialog}"
            AutomationProperties.AutomationId="Garden_SaveDialogOverlay">
      <Border Background="{DynamicResource SurfaceBrush}"
              CornerRadius="16"
              Padding="24"
              MaxWidth="340"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              AutomationProperties.AutomationId="Garden_SaveDialogCard">
        <StackPanel Spacing="16">
          <TextBlock Text="{loc:Translate SaveProject}"
                     FontSize="18" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     HorizontalAlignment="Center"
                     AutomationProperties.AutomationId="Garden_TxtSaveDialogTitle" />
          <TextBox Text="{Binding SaveProjectName}"
                   Watermark="{loc:Translate ProjectName}"
                   Classes="Outlined"
                   AutomationProperties.AutomationId="Garden_TxtBoxProjectName" />
          <Grid ColumnDefinitions="*,12,*">
            <Button Grid.Column="0"
                    Classes="Outlined"
                    Command="{Binding CancelSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Cancel}"
                    AutomationProperties.AutomationId="Garden_BtnCancelSave" />
            <Button Grid.Column="2"
                    Classes="Primary"
                    Command="{Binding ConfirmSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Save}"
                    AutomationProperties.AutomationId="Garden_BtnConfirmSave" />
          </Grid>
        </StackPanel>
      </Border>
    </Border>

  </Grid>

</UserControl>
